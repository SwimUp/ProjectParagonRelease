	<ThingDef ParentName="BuildingBase">
		<defName>FT_CavalrySpike</defName>
		<label>cavalry spikes</label>
		<description>A spiked barricade that slows down and injures people attempting to cross it.</description>
		<thingClass>ProjectParagon.Core.Things.Building_TrapDamagerParagonSelfDamage</thingClass>
		<category>Building</category>
		<graphicData>
			<texPath>FT_Cavalry_Spike</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<linkType>Basic</linkType>
			<linkFlags>
				<li>Barricades</li>
			</linkFlags>
		</graphicData>
		<costList>
			<WoodLog>25</WoodLog>
			<ComponentPrimitive>4</ComponentPrimitive>
		</costList>
