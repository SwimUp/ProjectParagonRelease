<Defs>
	<!-- Base -->
	<ThingDef Name="FT_Palisade_Base" Abstract="True">
		<category>Building</category>
		<thingClass>Building</thingClass>
		<soundImpactDefault>BulletImpact_Wood</soundImpactDefault>
		<selectable>true</selectable>
		<drawerType>MapMeshAndRealTime</drawerType>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<stuffCategories>
			<li>Woody</li>
		</stuffCategories>
		<blockWind>false</blockWind>
		<neverMultiSelect>true</neverMultiSelect>
		<holdsRoof>false</holdsRoof>
		<castEdgeShadows>false</castEdgeShadows>
		<building>
			<allowAutoroof>false</allowAutoroof>
			<isInert>true</isInert>
			<ai_chillDestination>false</ai_chillDestination>
		</building>
		<blockLight>false</blockLight>
		<repairEffect>Repair</repairEffect>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<filthLeaving>Filth_RubbleBuilding</filthLeaving>
		<designationCategory>Structure</designationCategory>
	</ThingDef>
	<!-- Palisade -->
	<ThingDef ParentName="FT_Palisade_Base">
		<defName>FT_Palisade</defName>
		<label>palisade wall</label>
		<thingClass>Building</thingClass>
		<description>A simple fortification wall for low-tech settlements. Takes longer to build than other walls, but is more durable.</description>
		<soundImpactDefault>MeleeHit_Wood</soundImpactDefault>
		<graphicData>
			<texPath>FT_Palisade</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<linkType>Basic</linkType>
			<linkFlags>
				<li>Wall</li>
				<li>Rock</li>
			</linkFlags>
		</graphicData>
		<uiIconPath>FT_Palisade_Icon</uiIconPath>
		<building>
			<blueprintGraphicData>
				<texPath>FT_PalisadeBlueprint</texPath>
			</blueprintGraphicData>
		</building>
		<statBases>
			<MaxHitPoints>500</MaxHitPoints>
			<WorkToBuild>800</WorkToBuild>
			<Flammability>0.6</Flammability>
			<Beauty>-5</Beauty>
		</statBases>
		<costStuffCount>10</costStuffCount>
		<costList>
			<ComponentPrimitive>1</ComponentPrimitive>
		</costList>
		<altitudeLayer>Building</altitudeLayer>
		<passability>Impassable</passability>
		<fillPercent>1</fillPercent>
		<coversFloor>false</coversFloor>
		<castEdgeShadows>false</castEdgeShadows>
		<placingDraggableDimensions>1</placingDraggableDimensions>
		<tickerType>Never</tickerType>
		<rotatable>false</rotatable>
		<repairEffect>ConstructWood</repairEffect>
		<staticSunShadowHeight>0.80</staticSunShadowHeight>
		<researchPrerequisites>
			<li>PrimitiveDefense</li>
		</researchPrerequisites>
		<designatorDropdown>Structure_Walls</designatorDropdown>
	</ThingDef>
