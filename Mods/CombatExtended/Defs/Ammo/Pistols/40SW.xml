			<damageDef>Bullet</damageDef>
			<speed>68</speed>
			<dropsCasings>true</dropsCasings>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="Base40SWBullet">
		<defName>Bullet_40SW_FMJ</defName>
