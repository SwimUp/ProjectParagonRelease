		<jobString>Making 5x100mm Caseless (Sabot) cartridges.</jobString>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Alloys_Strong</li>
						<li>Alloys_Superalloys</li>
					</categories>
				</filter>
				<count>15</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>BrassIngot</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>SmokelessGunpowder</li>
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Alloys_Strong</li>
				<li>Alloys_Superalloys</li>
			</categories>
			<thingDefs>
				<li>SmokelessGunpowder</li>
				<li>BrassIngot</li>
			</thingDefs>
		</fixedIngredientFilter>
		<recipeUsers Inherit="false">
			<li>AmmoBench</li>
			<li>WeaponWorkbench</li>
		</recipeUsers>
		<researchPrerequisite>Gunsmithing</researchPrerequisite>
		<products>
			<Ammo_5x100mmCaseless_Sabot>500</Ammo_5x100mmCaseless_Sabot>
