<Defs>
    <!-- Primitive -->
    <ThingDef Name="SurvivalToolPrimitive" ParentName="TF_BaseTool" Abstract="True">
        <techLevel>Neolithic</techLevel>
        <statBases>
			<WorkToMake>1500</WorkToMake>
        </statBases>
		<stuffCategories>
            <li>Stony</li>
            <li>Woody</li>
        </stuffCategories>
        <smeltable>true</smeltable>
        <recipeMaker>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <workSkill>Crafting</workSkill>
            <effectWorking>Smith</effectWorking>
            <soundWorking>Recipe_Smith</soundWorking>
            <recipeUsers>
                <li>CraftingSpot</li>
                <li>ElectricSmithy</li>
                <li>FueledSmithy</li>
            </recipeUsers>
            <defaultIngredientFilter>
                <categories>
                    <li>Root</li>
                </categories>
                <disallowedThingDefs>
                    <li>Silver</li>
                    <li>Gold</li>
                </disallowedThingDefs>
            </defaultIngredientFilter>
            <unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
        </recipeMaker>
        <comps>
            <li>
                <compClass>CompQuality</compClass>
            </li>
        </comps>
    </ThingDef>

    <!-- Tools -->

    <ThingDef ParentName="SurvivalToolPrimitive">
        <defName>SurvivalTools_Primitive_Axe</defName>
        <label>primitive axe</label>
        <description>Effective at chopping down trees thanks to the head that's attached to its handle. This can also be used as a melee weapon in a pinch.</description>
        <graphicData>
            <texPath>Things/Item/Equipment/Tool/primal_axe</texPath>
            <graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>	 
        </graphicData>
		<costStuffCount>40</costStuffCount>
        <statBases>
            <Mass>2.5</Mass>
        </statBases>
        <modExtensions>
            <li Class="ToolsFramework.ToolProperties">
                <toolTypesValue>
                    <FellingTool>0.7</FellingTool>
                </toolTypesValue>
            </li>
        </modExtensions>
        <tools>
            <li>
                <label>handle</label>
                <capacities>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <!-- 83% of the club's DPS with the main tool -->
            <li>
                <label>head</label>
                <labelUsedInLogging>false</labelUsedInLogging>
                <capacities>
                    <li>Cut</li>
                </capacities>
                <power>15.1</power>
                <cooldownTime>2.6</cooldownTime>
            </li>
        </tools>
        <thingCategories>
            <li>FellingTools</li>
        </thingCategories>
    </ThingDef>

