			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Human"]/modExtensions</xpath>
				<value>
					<li Class="ProjectParagon.Core.Things.RacePropertiesDefModExtension">
						<bloodDef>HumanBlood</bloodDef>
