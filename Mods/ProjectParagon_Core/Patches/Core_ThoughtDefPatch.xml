<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationReplace">
		<xpath>*/ThoughtDef[defName="NewColonyOptimism"]</xpath>
		<value>
			<ThoughtDef>
				<defName>NewColonyOptimism</defName>
				<durationDays>40</durationDays>
				<nextThought>NewColonyHope</nextThought>
				<stages>
					<li>
						<label>initial optimism</label>
						<description>It's a tough situation, but I'm excited to be founding a new settlement.</description>
						<baseMoodEffect>20</baseMoodEffect>
					</li>
				</stages>
			</ThoughtDef>
		</value>
	</Operation>
</Patch>