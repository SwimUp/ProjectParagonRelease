						<designationCategory>Furniture</designationCategory>
						<designatorDropdown>Music</designatorDropdown>
						<comps>
							<li Class="ProjectParagon.Core.Things.CompProperties_ParagonMusicalInstrument">
								<allowedThingDefs>
									<li>MusicalComposition</li>
								</allowedThingDefs>
							</li>
						</comps>
					</ThingDef>
				</value>
