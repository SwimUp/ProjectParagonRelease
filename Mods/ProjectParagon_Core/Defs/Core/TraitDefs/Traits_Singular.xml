<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<TraitDef>
		<defName>TP_Fearlessness</defName>
		<commonality>0.25</commonality>
		<degreeDatas>
			<li>
				<label>fearlessness</label>
				<description>{PAWN_nameDef} is devoid of fear when it comes to protecting that dear to {PAWN_gender ? him : her}.</description>
				<statOffsets>
					<PainShockThreshold>0.30</PainShockThreshold>
					<MentalBreakThreshold>-0.2</MentalBreakThreshold>
				</statOffsets>
			</li>
		</degreeDatas>
		<conflictingTraits>
			<li>Neurotic</li>
			<li>Nerves</li>
		</conflictingTraits>
		<requiredWorkTags>
			<li>Violent</li>
		</requiredWorkTags>
	</TraitDef>

	<TraitDef>
		<defName>TP_Energetic</defName>
		<commonality>1.0</commonality>
		<degreeDatas>
			<li>
				<label>energetic</label>
				<description>{PAWN_nameDef} is quite energetic and efficient person.</description>
				<statOffsets>
					<MoveSpeed>0.25</MoveSpeed>
					<WorkSpeedGlobal>0.15</WorkSpeedGlobal>
				</statOffsets>
			</li>
		</degreeDatas>
		<conflictingTraits>
			<li>Neurotic</li>
			<li>SpeedOffset</li>
			<li>Industriousness</li>
		</conflictingTraits>
	</TraitDef>

	<TraitDef>
		<defName>TP_Aggressiveness</defName>
		<commonality>0.75</commonality>
		<degreeDatas>
			<li>
				<label>aggressiveness</label>
				<description>{PAWN_nameDef} hates it when someone gets on {PAWN_gender ? him : her} nerves.</description>
			</li>
		</degreeDatas>
		<conflictingTraits>
			<li>Kind</li>
			<li>Nerves</li>
		</conflictingTraits>
		<requiredWorkTags>
			<li>Violent</li>
		</requiredWorkTags>
	</TraitDef>

	<TraitDef>
		<defName>TP_Elegance</defName>
		<commonality>0.6</commonality>
		<degreeDatas>
			<li>
				<label>elegance</label>
				<description>{PAWN_nameDef} is able to look dignified and elegant no matter what.</description>
				<statOffsets>
					<PawnBeauty>0.5</PawnBeauty>
				</statOffsets>
			</li>
		</degreeDatas>
	</TraitDef>

	<TraitDef>
		<defName>TP_Accuracy</defName>
		<commonality>1.0</commonality>
		<degreeDatas>
			<li>
				<label>accuracy</label>
				<description>{PAWN_nameDef} is always accurate in {PAWN_gender ? him : her} work, even if this reduces {PAWN_gender ? him : her} potential speed.</description>
				<statOffsets>
					<ShootingAccuracyPawn>3</ShootingAccuracyPawn>
					<WorkSpeedGlobal>-0.15</WorkSpeedGlobal>
				</statOffsets>
			</li>
		</degreeDatas>
		<conflictingTraits>
			<li>ShootingAccuracy</li>
			<li>Brawler</li>
		</conflictingTraits>
		<requiredWorkTags>
			<li>Violent</li>
		</requiredWorkTags>
	</TraitDef>

	<TraitDef>
		<defName>TP_Wisdom</defName>
		<commonality>0.5</commonality>
		<degreeDatas>
			<li>
				<label>wisdom</label>
				<description>{PAWN_nameDef} thoughts are often quite wise and accurate.</description>
				<statOffsets>
					<GlobalLearningFactor>0.5</GlobalLearningFactor>
					<WorkSpeedGlobal>-0.25</WorkSpeedGlobal>
				</statOffsets>
			</li>
		</degreeDatas>
		<requiredWorkTags>
			<li>Intellectual</li>
		</requiredWorkTags>
		<conflictingTraits>
			<li>TooSmart</li>
			<li>SlowLearner</li>
		</conflictingTraits>
	</TraitDef>

	<TraitDef>
		<defName>TP_Curiosity</defName>
		<commonality>1.25</commonality>
		<degreeDatas>
			<li>
				<label>curiosity</label>
				<description>{PAWN_nameDef} loves to explore the world around {PAWN_gender ? him : her} through trial and error.</description>
				<statOffsets>
					<GlobalLearningFactor>0.25</GlobalLearningFactor>
				</statOffsets>
			</li>
		</degreeDatas>
		<conflictingTraits>
			<li>SlowLearner</li>
		</conflictingTraits>
		<requiredWorkTags>
			<li>Intellectual</li>
		</requiredWorkTags>
	</TraitDef>

	<TraitDef>
		<defName>TP_Principledness</defName>
		<commonality>1.0</commonality>
		<degreeDatas>
			<li>
				<label>principledness</label>
				<description>{PAWN_nameDef} very rarely allows {PAWN_gender ? himself : herself} to retreat from {PAWN_gender ? his : her} position, which often results in conflicts with others.</description>
				<socialFightChanceFactor>2.5</socialFightChanceFactor>
				<statOffsets>
					<MentalBreakThreshold>-0.08</MentalBreakThreshold>
				</statOffsets>
			</li>
		</degreeDatas>
		<conflictingTraits>
			<li>Kind</li>
			<li>Wimp</li>
		</conflictingTraits>
		<requiredWorkTags>
			<li>Violent</li>
		</requiredWorkTags>
	</TraitDef>

	<TraitDef>
		<defName>TP_Leadership</defName>
		<commonality>0.75</commonality>
		<degreeDatas>
			<li>
				<label>leadership</label>
				<description>{PAWN_nameDef} usually easily becomes an authority for those around him.</description>
				<socialFightChanceFactor>0.5</socialFightChanceFactor>
				<statOffsets>
					<MentalBreakThreshold>-0.10</MentalBreakThreshold>
				</statOffsets>
			</li>
		</degreeDatas>
	</TraitDef>
	
	<TraitDef>
		<defName>TP_Hysterical</defName>
		<commonality>0.75</commonality>
		<degreeDatas>
			<li>
				<label>hysterical</label>
				<description>{PAWN_nameDef} has a rather complex character, which translates into fits of tantrum.</description>
			</li>
		</degreeDatas>
		<conflictingTraits>
			<li>Kind</li>
			<li>TP_Fearlessness</li>
			<li>TP_Aggressiveness</li>
			<li>Nerves</li>
		</conflictingTraits>
	</TraitDef>
	
	<TraitDef>
		<defName>TP_Limitation</defName>
		<commonality>1.0</commonality>
		<degreeDatas>
			<li>
				<label>limitation</label>
				<description>{PAWN_nameDef} does not like to go beyond the boundaries of the world known to {PAWN_gender ? him : her}.</description>
				<statOffsets>
					<GlobalLearningFactor>-0.85</GlobalLearningFactor>
				</statOffsets>
			</li>
		</degreeDatas>
		<conflictingTraits>
			<li>TP_Wisdom</li>
			<li>TooSmart</li>
			<li>FastLearner</li>
			<li>TP_Curiosity</li>
		</conflictingTraits>
	</TraitDef>

</Defs>
