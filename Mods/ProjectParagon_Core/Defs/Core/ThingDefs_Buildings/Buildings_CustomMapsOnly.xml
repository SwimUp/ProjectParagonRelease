<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="AncientSmallWalkableBuildingBase">
		<defName>SteelGuard</defName>
		<label>steel guard</label>
		<description>Statue of a man dressed in armor.</description>
		<graphicData>
			<texPath>Core/Buildings/CustomMapsOnly/SteelGuard</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<drawSize>(2,2)</drawSize>
			<drawOffset>0,0,0.25</drawOffset>
			<shadowData>
				<volume>(0.3, 0.5, 0.3)</volume>
				<offset>(0,0,-0.23)</offset>
			</shadowData>
		</graphicData>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<WorkToBuild>500</WorkToBuild>
		</statBases>
		<costList>
			<Steel>60</Steel>
		</costList>
		<size>(1,1)</size>
	</ThingDef>
	<ThingDef ParentName="BuildingBase">
		<defName>FishingBoat</defName>
		<label>fishing boat</label>
		<description>A fishing boat.</description>
		<category>Building</category>
		<graphicData>
			<texPath>Core/Buildings/RandomPlaces/Boat</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<drawSize>(13,13)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
			<shadowData>
				<volume>(3, 4, 5)</volume>
				<offset>(0,0,0)</offset>
			</shadowData>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<pathCost>42</pathCost>
		<passability>PassThroughOnly</passability>
		<fillPercent>0.50</fillPercent>
		<size>(3,6)</size>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<Flammability>2</Flammability>
			<Beauty>-5</Beauty>
			<WorkToBuild>3000</WorkToBuild>
		</statBases>
		<costList>
			<WoodLog>300</WoodLog>
		</costList>
		<building>
			<claimable>false</claimable>
			<alwaysDeconstructible>true</alwaysDeconstructible>
		</building>
		<selectable>true</selectable>
		<drawerType>MapMeshOnly</drawerType>
		<repairEffect>ConstructWood</repairEffect>
		<comps>
			<li Class="ProjectParagon.Core.Things.CompProperties_Container">
				<thingSetMakerDef>FishingBoat</thingSetMakerDef>
				<lootChance>0.4~0.8</lootChance>
			</li>
		</comps>
	</ThingDef>
