<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="FurnitureWithQualityBase">
		<defName>WriterTable</defName>
		<label>Writer table</label>
		<description>Large table with many books and notes. Perfect for creative people to spend a couple of evenings reading or writing.</description>
		<graphicData>
			<texPath>Core/Buildings/WriterTable/WriterTable</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(5,4)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<size>(3,2)</size>
		<staticSunShadowHeight>0.2</staticSunShadowHeight>
		<castEdgeShadows>True</castEdgeShadows>
		<altitudeLayer>Building</altitudeLayer>
		<socialPropernessMatters>true</socialPropernessMatters>
		<fillPercent>0.40</fillPercent>
		<terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
		<building>
			<joyKind>Gaming_Cerebral</joyKind>
			<buildingSizeCategory>Medium</buildingSizeCategory>
		</building>
		<statBases>
			<MaxHitPoints>250</MaxHitPoints>
			<WorkToBuild>12000</WorkToBuild>
			<Mass>60</Mass>
			<Flammability>1.0</Flammability>
			<Beauty>0</Beauty>
			<JoyGainFactor>1.2</JoyGainFactor>
		</statBases>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>200</costStuffCount>
		<costList>
			<Book>16</Book>
			<ComponentSimple>4</ComponentSimple>
		</costList>
		<pathCost>50</pathCost>
		<passability>PassThroughOnly</passability>
		<canOverlapZones>false</canOverlapZones>
		<placeWorkers>
			<li>PlaceWorker_NeverAdjacentUnstandable</li>
		</placeWorkers>
		<researchPrerequisites>
			<li>GamesII</li>
		</researchPrerequisites>
		<designationCategory>Joy</designationCategory>
		<designatorDropdown>MindGames</designatorDropdown>
	</ThingDef>
	
	<ThingDef ParentName="BuildingBase">
		<defName>StrawMannequin</defName>
		<label>Straw mannequin</label>
		<description>A figure imitating a man and stuffed with straw. Suitable for training blunt weapons.</description>
		<graphicData>
			<texPath>Core/Buildings/StrawMannequin/StrawMannequin</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shadowData>
				<volume>(0.08, 0.2, 0.08)</volume>
				<offset>(0, 0, -0.1)</offset>
			</shadowData>
			<damageData>
				<rect>(0.3,0.3,0.4,0.4)</rect>
			</damageData>
			<drawSize>(2,2)</drawSize>
			<drawOffset>(0.07, 0, 0.4)</drawOffset>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<rotatable>true</rotatable>
		<socialPropernessMatters>true</socialPropernessMatters>
		<hasInteractionCell>true</hasInteractionCell>
		<statBases>
			<MaxHitPoints>250</MaxHitPoints>
			<WorkToBuild>250</WorkToBuild>
			<Mass>3</Mass>
			<Flammability>1.0</Flammability>
			<JoyGainFactor>1</JoyGainFactor>
		</statBases>
		<costList>
			<WoodLog>100</WoodLog>
			<ComponentPrimitive>2</ComponentPrimitive>
			<Hay>250</Hay>
		</costList>
		<interactionCellOffset>(0, 0, -1)</interactionCellOffset>
		<uiIconScale>0.8</uiIconScale>
		<building>
			<joyKind>Training</joyKind>
			<watchBuildingStandDistanceRange>1~1</watchBuildingStandDistanceRange>
			<watchBuildingStandRectWidth>1</watchBuildingStandRectWidth>
			<watchBuildingInSameRoom>true</watchBuildingInSameRoom>
			<artificialForMeditationPurposes>false</artificialForMeditationPurposes>
		</building>
		<pathCost>14</pathCost>
		<designationCategory>Joy</designationCategory>
		<designatorDropdown>StrengthGames</designatorDropdown>
		<damageMultipliers>
			<li>
				<!-- Бомба -->
				<damageDef>Bomb</damageDef>
				<multiplier>2.0</multiplier>
			</li>
			<li>
				<!-- Укус -->
				<damageDef>Bite</damageDef>
				<multiplier>0.65</multiplier>
			</li>
			<li>
				<!-- Удар -->
				<damageDef>Blunt</damageDef>
				<multiplier>0.25</multiplier>
			</li>
			<li>
				<!-- Давка -->
				<damageDef>Crush</damageDef>
				<multiplier>0.25</multiplier>
			</li>
			<li>
				<!-- Порез -->
				<damageDef>Cut</damageDef>
				<multiplier>2.0</multiplier>
			</li>
			<li>
				<!-- Тычок -->
				<damageDef>Poke</damageDef>
				<multiplier>0.25</multiplier>
			</li>
			<li>
				<!-- Рваная рана -->
				<damageDef>Scratch</damageDef>
				<multiplier>2.0</multiplier>
			</li>
			<li>
				<!-- Рана с ядом -->
				<damageDef>ScratchToxic</damageDef>
				<multiplier>2.0</multiplier>
			</li>
			<li>
				<!-- Укол -->
				<damageDef>Stab</damageDef>
				<multiplier>0.5</multiplier>
			</li>
			<li>
				<!-- Ядовитый укус -->
				<damageDef>ToxicBite</damageDef>
				<multiplier>0.6</multiplier>
			</li>
			<li>
				<!-- Стрела -->
				<damageDef>Arrow</damageDef>
				<multiplier>2.0</multiplier>
			</li>
			<li>
				<!-- Стрела (выс.скорость) -->
				<damageDef>ArrowHighVelocity</damageDef>
				<multiplier>2.0</multiplier>
			</li>
			<li>
				<!-- Пуля -->
				<damageDef>Bullet</damageDef>
				<multiplier>2.5</multiplier>
			</li>
			<li>
				<!-- Укол (дальний бой) -->
				<damageDef>RangedStab</damageDef>
				<multiplier>2.5</multiplier>
			</li>
		</damageMultipliers>
	</ThingDef>
	
