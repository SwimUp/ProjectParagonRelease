<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThoughtDef>
		<defName>Thought_DustInTheEyes</defName>
		<workerClass>ProjectParagon.Core.Weathers.Workers.ThoughtWorker_DustStorm</workerClass>
		<stages>
			<li>
				<label>Dust in the eyes</label>
				<description>Due to a strong dust storm, my eyes are all in the sand.</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>Thought_SaltInTheEyes</defName>
		<workerClass>ProjectParagon.Core.Weathers.Workers.ThoughtWorker_DrySaltDustStorm</workerClass>
		<stages>
			<li>
				<label>Salt in the eyes</label>
				<description>Due to the strong dust storm and the presence of salt in it, salt was hammered into my eyes. Pinches!</description>
				<baseMoodEffect>-8</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>Events_ThoughtDef_MountainAir</defName>
		<durationDays>3</durationDays>
		<stages>
			<li>
				<label>mountain air</label>
				<description>I feel the freshness of the mountains.</description>
				<baseMoodEffect>2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>Events_ThoughtDef_SeaAir</defName>
		<durationDays>3</durationDays>
		<stages>
			<li>
				<label>sea air</label>
				<description>I feel the freshness of the sea.</description>
				<baseMoodEffect>2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>Events_ThoughtDef_DeathOfDistantStar</defName>
		<durationDays>5</durationDays>
		<stages>
			<li>
				<label>death of distant star</label>
				<description>It is extraordinarily exciting to watch the death of a star years after its actual death.</description>
				<baseMoodEffect>3</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>Events_ThoughtDef_ParadeOfPlanets</defName>
		<durationDays>1</durationDays>
		<stages>
			<li>
				<label>parade of planets</label>
				<description>I happened to look at the parade of the planets. An interesting sight.</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>Events_ThoughtDef_SummerSolstice</defName>
		<durationDays>1</durationDays>
		<stages>
			<li>
				<label>summer solstice</label>
				<description>Midsummer, longest day.</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>MentalExhaustion</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>MentalExhaustion</hediff>
		<validWhileDespawned>true</validWhileDespawned>
		<stages>
			<li>
				<label>initial mental exhaustion</label>
				<description>My thoughts are confused.</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
			<li>
				<label>major mental exhaustion</label>
				<description>What is this endless noise? When will it end?</description>
				<baseMoodEffect>-15</baseMoodEffect>
			</li>
			<li>
				<label>extreme mental exhaustion</label>
				<description>Something is breaking my head! Stop that!</description>
				<baseMoodEffect>-25</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>KillingBadForester</defName>
		<durationDays>10</durationDays>
		<stages>
			<li>
				<label>killing a bad forester</label>
				<description>We killed a seemingly innocent person. After a search of the house, many murder weapons and several victims were found.</description>
				<baseMoodEffect>8</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>KillingGoodForester</defName>
		<durationDays>14</durationDays>
		<stages>
			<li>
				<label>killing a good forester</label>
				<description>We robbed a house and killed an innocent person. Why?!</description>
				<baseMoodEffect>-10</baseMoodEffect>
			</li>
		</stages>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
			<li>Cannibal</li>
			<li>TP_Aggressiveness</li>
		</nullifyingTraits>
		<nullifyingPrecepts>
			<li>Skullspike_Desired</li>
			<li>Raiding_Respected</li>
			<li>Raiding_Required</li>
			<li>Corpses_DontCare</li>
			<li>Cannibalism_Acceptable</li>
			<li>Cannibalism_RequiredStrong</li>
			<li>Cannibalism_RequiredRavenous</li>
		</nullifyingPrecepts>
	</ThoughtDef>
	<ThoughtDef>
		<defName>RestWithForest</defName>
		<durationDays>7</durationDays>
		<stages>
			<li>
				<label>rest in the forest</label>
				<description>The forester fed us and let us sleep in his house. Apparently he does not often see people and is glad to meet.</description>
				<baseMoodEffect>15</baseMoodEffect>
			</li>
		</stages>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
			<li>Cannibal</li>
			<li>TP_Aggressiveness</li>
		</nullifyingTraits>
	</ThoughtDef>
	<ThoughtDef>
		<defName>ForesterDeceit</defName>
		<durationDays>10</durationDays>
		<stages>
			<li>
				<label>forester deceit</label>
				<description>How could he do this? We did believe him!</description>
				<baseMoodEffect>-8</baseMoodEffect>
			</li>
		</stages>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
			<li>Cannibal</li>
			<li>TP_Aggressiveness</li>
		</nullifyingTraits>
	</ThoughtDef>
	<ThoughtDef>
		<defName>LifeTreeGoodGifts</defName>
		<durationDays>7</durationDays>
		<stages>
			<li>
				<label>good life tree gifts</label>
				<description>The tree clearly liked our gifts!</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>LifeTreeBadGifts</defName>
		<durationDays>7</durationDays>
		<stages>
			<li>
				<label>bad life tree gifts</label>
				<description>The tree is angry with us for the terrible ritual!</description>
				<baseMoodEffect>-7</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>LifeTreeModestGifts</defName>
		<durationDays>7</durationDays>
		<stages>
			<li>
				<label>modest life tree gifts</label>
				<description>The tree showed almost no interest, but accepted our gifts.</description>
				<baseMoodEffect>2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>LifeTreeExcellentGifts</defName>
		<durationDays>7</durationDays>
		<stages>
			<li>
				<label>excellent life tree gifts</label>
				<description>The tree accepted our gifts and clearly liked it!</description>
				<baseMoodEffect>8</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>LifeTreeLegendaryGifts</defName>
		<durationDays>7</durationDays>
		<stages>
			<li>
				<label>legendary life tree gifts</label>
				<description>This ritual was unforgettable!</description>
				<baseMoodEffect>12</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
</Defs>
