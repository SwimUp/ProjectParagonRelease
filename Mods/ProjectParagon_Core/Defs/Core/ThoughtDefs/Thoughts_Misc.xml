<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThoughtDef>
		<defName>TP_Colonist_Sacrifice</defName>
		<durationDays>15</durationDays>
		<stackLimit>5</stackLimit>
		<stackedEffectMultiplier>0.5</stackedEffectMultiplier>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
			<li>TP_Aggressiveness</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>colonist sacrifice</label>
				<description>This is inhuman! We shouldn't do this, we are civilized people!</description>
				<baseMoodEffect>-20</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>TP_Prisoner_Sacrifice</defName>
		<durationDays>10</durationDays>
		<stackLimit>5</stackLimit>
		<stackedEffectMultiplier>0.5</stackedEffectMultiplier>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
			<li>TP_Aggressiveness</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>prisoner sacrifice</label>
				<description>This is inhuman! We should not do this in relation to prisoners, we are civilized people!</description>
				<baseMoodEffect>-10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>TP_Relic_Destroyed</defName>
		<durationDays>20</durationDays>
		<stackLimit>5</stackLimit>
		<stackedEffectMultiplier>0.5</stackedEffectMultiplier>
		<nullifyingTraits>
			<li>Psychopath</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>relic destroyed</label>
				<description>Our relic has been destroyed, it's so terrible.</description>
				<baseMoodEffect>-8</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>TP_Buried_Honors</defName>
		<durationDays>10</durationDays>
		<stackLimit>5</stackLimit>
		<stackedEffectMultiplier>0.5</stackedEffectMultiplier>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
			<li>TP_Aggressiveness</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>The fallen was buried with honors</label>
				<description>Our friends have died, but we have not forgotten them. They were buried with dignity.</description>
				<baseMoodEffect>8</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>ArcheologySkeletonCollected</defName>
		<durationDays>7</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>archaeological exhibite collected</label>
				<description>This is a great day. We were able to assemble a new exhibit.</description>
				<baseMoodEffect>-20</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>LeaderAura</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>LeaderAura</hediff>
		<validWhileDespawned>true</validWhileDespawned>
		<stages>
			<li>
				<label>leader with us</label>
				<description>My leader goes on the attack side by side with me!</description>
				<baseMoodEffect>30</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>ListenedMusicalComposition</defName>
		<durationDays>1</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>listened awful music</label>
				<description>Who wrote this nonsense?</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
			<li>
				<label>listened poor music</label>
				<description>It's good in places, but overall it's poor.</description>
				<baseMoodEffect>-3</baseMoodEffect>
			</li>
			<li>
				<label>listened normal music</label>
				<description>Not bad, but it could have been better.</description>
				<baseMoodEffect>1</baseMoodEffect>
			</li>
			<li>
				<label>listened good music</label>
				<description>Really infectious melody, I like it!</description>
				<baseMoodEffect>2</baseMoodEffect>
			</li>
			<li>
				<label>listened excellent music</label>
				<description>Wonderful music!</description>
				<baseMoodEffect>3</baseMoodEffect>
			</li>
			<li>
				<label>listened masterwork music</label>
				<description>Incredible! Thank you for the well spent minutes!</description>
				<baseMoodEffect>4</baseMoodEffect>
			</li>
			<li>
				<label>listened legendary music</label>
				<description>This is a gem! Great music for our times.</description>
				<baseMoodEffect>6</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>PlayerSettlementRaidSuccess</defName>
		<durationDays>7</durationDays>
		<stackLimit>3</stackLimit>
		<stages>
			<li>
				<label>successful raid</label>
				<description>Another goal fell before us! This should be noted!</description>
				<baseMoodEffect>10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>XenophobeKilledXenos</defName>
		<durationDays>5</durationDays>
		<stackLimit>5</stackLimit>
		<stackedEffectMultiplier>0.5</stackedEffectMultiplier>
		<stages>
			<li>
				<label>killed xenos</label>
				<description>Xenos scum!</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>XenophobeXenosDeathWitness</defName>
		<durationDays>3</durationDays>
		<stackLimit>8</stackLimit>
		<stackedEffectMultiplier>0.5</stackedEffectMultiplier>
		<stages>
			<li>
				<label>xenos death witness</label>
				<description>Dirty xenos animal slaughtered right in front of my eyes! This world has become a little cleaner.</description>
				<baseMoodEffect>2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>XenophileKilledXenos</defName>
		<durationDays>5</durationDays>
		<stackLimit>5</stackLimit>
		<stackedEffectMultiplier>0.5</stackedEffectMultiplier>
		<stages>
			<li>
				<label>killed xenos</label>
				<description>I killed the beautiful creation of the universe, I am a monster...</description>
				<baseMoodEffect>-4</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>XenophileXenosDeathWitness</defName>
		<durationDays>3</durationDays>
		<stackLimit>8</stackLimit>
		<stackedEffectMultiplier>0.5</stackedEffectMultiplier>
		<stages>
			<li>
				<label>xenos death witness</label>
				<description>Why are we killing each other?! Couldn't we have done it differently...</description>
				<baseMoodEffect>-2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>AtePemmican</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
		<durationDays>1</durationDays>
		<stages>
			<li>
				<label>ate pemmican</label>
				<description>I ate a very mediocre biomass without taste and smell. Can't we afford something better?</description>
				<baseMoodEffect>-4</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>AteSandCactus</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
		<durationDays>1</durationDays>
		<stages>
			<li>
				<label>ate sand cactus</label>
				<description>I ate a squeaky and tasteless piece of cactus, seriously?</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>AteRoastedCactus</defName>
		<durationDays>1</durationDays>
		<stages>
			<li>
				<label>ate roasted cactus</label>
				<description>I ate a really tasty fine meal. Yum!</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
	<ThoughtDef>
		<defName>AteRockSaltSaltGene</defName>
		<durationDays>1</durationDays>
		<stages>
			<li>
				<label>salt glut</label>
				<description>There is so much salt in the body that it lifts the mood</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
	<ThoughtDef>
		<defName>CultureSiteBuilt</defName>
		<durationDays>10</durationDays>
		<stackLimit>3</stackLimit>
		<stackedEffectMultiplier>0.5</stackedEffectMultiplier>
		<stages>
			<li>
				<label>Built a monument</label>
				<description>Completed the construction of the cultural building!</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
</Defs>
