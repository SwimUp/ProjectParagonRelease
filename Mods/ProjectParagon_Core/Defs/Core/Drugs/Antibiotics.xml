<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="MakeableDrugPillBase">
		<defName>Antibiotics</defName>
		<label>Antibiotics</label>
		<description>A drug for the treatment of infections. Accelerates the production of immunity.</description>
		<descriptionHyperlinks>
			<HediffDef>AntibioticsHigh</HediffDef>
		</descriptionHyperlinks>
		<graphicData>
			<texPath>Core/Items/Antibiotics/Antibiotics</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<socialPropernessMatters>false</socialPropernessMatters>
		<rotatable>false</rotatable>
		<statBases>
			<WorkToMake>600</WorkToMake>
			<MarketValue>25</MarketValue>
			<Mass>0.005</Mass>
			<Flammability>0.7</Flammability>
		</statBases>
		<stackLimit>25</stackLimit>
		<techLevel>Industrial</techLevel>
		<ingestible>
			<drugCategory>Medical</drugCategory>
			<outcomeDoers>
				<li Class="IngestionOutcomeDoer_GiveHediff">
					<hediffDef>AntibioticsHigh</hediffDef>
					<severity>0.4</severity>
				</li>
			</outcomeDoers>
		</ingestible>
		<recipeMaker>
			<researchPrerequisite>Narko_AntibioticProduction</researchPrerequisite>
			<recipeUsers>
				<li>DrugLab</li>
			</recipeUsers>
		</recipeMaker>
		<costList>
			<Neutroamine>2</Neutroamine>
		</costList>
		<comps>
			<li Class="CompProperties_Drug">
				<listOrder>1000</listOrder>
				<overdoseSeverityOffset>0.08~0.14</overdoseSeverityOffset>
			</li>
		</comps>
	</ThingDef>
	<HediffDef>
		<defName>AntibioticsHigh</defName>
		<hediffClass>Hediff_High</hediffClass>
		<label>Antibiotics</label>
		<description>Accelerated development of immunity.</description>
		<defaultLabelColor>(1,0,0.5)</defaultLabelColor>
		<scenarioCanAdd>true</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-1.0</severityPerDay>
				<showHoursToRecover>true</showHoursToRecover>
			</li>
		</comps>
		<stages>
			<li>
				<statOffsets>
					<ImmunityGainSpeed>0.3</ImmunityGainSpeed>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>
</Defs>
