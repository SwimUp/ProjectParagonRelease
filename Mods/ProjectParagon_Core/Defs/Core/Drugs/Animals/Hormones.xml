<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="MakeableDrugPillBase">
		<defName>Smectin</defName>
		<label>Smectin</label>
		<description>A drug that increases muscle and meat growth in animals.</description>
		<descriptionHyperlinks>
			<HediffDef>SteroidsHigh</HediffDef>
		</descriptionHyperlinks>
		<graphicData>
			<texPath>Core/Items/Smectin</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<socialPropernessMatters>false</socialPropernessMatters>
		<rotatable>false</rotatable>
		<statBases>
			<WorkToMake>600</WorkToMake>
			<MarketValue>20</MarketValue>
			<Mass>0.005</Mass>
			<Flammability>1</Flammability>
		</statBases>
		<stackLimit>25</stackLimit>
		<techLevel>Industrial</techLevel>
		<thingCategories Inherit="false">
			<li>DrugsAnimals</li>
		</thingCategories>
		<ingestible>
			<drugCategory>Medical</drugCategory>
			<nurseable>true</nurseable>
			<outcomeDoers>
				<li Class="ProjectParagon.Core.Hediffs.IngestionOutcomeDoers.IngestionOutcomeDoer_GiveHediffMaxSeverity">
					<hediffDef>HormonesHigh</hediffDef>
					<severityMax>2.99</severityMax>
					<severity>0.95</severity>
					<divideByBodySize>true</divideByBodySize>
				</li>
			</outcomeDoers>
		</ingestible>
		<recipeMaker Class="ProjectParagon.Core.Things.RecipeMakerPropertiesParagon">
			<researchPrerequisite>LivestockDrugs</researchPrerequisite>
			<recipeUsers>
				<li>DrugLab</li>
				<li>ChemicalStation</li>
			</recipeUsers>
			<productCount>4</productCount>
		</recipeMaker>
		<costList>
			<MedicineHerbal>2</MedicineHerbal>
			<Glass>4</Glass>
		</costList>
		<comps>
			<li Class="CompProperties_Drug">
				<listOrder>1000</listOrder>
				<overdoseSeverityOffset>0.08~0.14</overdoseSeverityOffset>
			</li>
		</comps>
	</ThingDef>
	<ThingDef ParentName="MakeableDrugPillBase">
		<defName>Synchrostim</defName>
