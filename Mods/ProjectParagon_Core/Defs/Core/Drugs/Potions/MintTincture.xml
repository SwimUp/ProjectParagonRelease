<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="DrugPillBase">
		<defName>MintTincture</defName>
		<label>Mint tincture</label>
		<description>Soothing mint tincture.</description>
		<descriptionHyperlinks>
			<HediffDef>MintHigh</HediffDef>
		</descriptionHyperlinks>
		<graphicData>
			<texPath>Core/Items/Tincture/MintTincture</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<thingSetMakerTags>
			<li>RewardStandardLowFreq</li>
		</thingSetMakerTags>
		<socialPropernessMatters>false</socialPropernessMatters>
		<rotatable>false</rotatable>
		<stackLimit>25</stackLimit>
		<statBases>
			<WorkToMake>800</WorkToMake>
			<MarketValue>12</MarketValue>
			<Mass>0.009</Mass>
			<Flammability>0.5</Flammability>
			<Nutrition>0.001</Nutrition>
			<Protein>0.0</Protein>
			<Fat>0.0</Fat>
			<Carbohydrates>0.005</Carbohydrates>
			<Vitamins>0.008</Vitamins>
			<Flavor>0.0</Flavor>
		</statBases>
		<techLevel>Neolithic</techLevel>
		<ingestible>
			<drugCategory>Medical</drugCategory>
			<outcomeDoers>
				<li Class="IngestionOutcomeDoer_GiveHediff">
					<hediffDef>MintHigh</hediffDef>
					<severity>1.0</severity>
				</li>
			</outcomeDoers>
		</ingestible>
		<comps>
			<li Class="CompProperties_Drug">
				<listOrder>1000</listOrder>
				<overdoseSeverityOffset>0.08~0.14</overdoseSeverityOffset>
			</li>
		</comps>
	</ThingDef>
	
	<RecipeDef Class="ProjectParagon.Core.Recipes.ExtendedRecipeDef">
		<defName>Make_MintTincture</defName>
		<label>Make mint tincture</label>
		<description>Make mint tincture.</description>
		<jobString>Making mint tincture.</jobString>
		<workSpeedStat>DrugCookingSpeed</workSpeedStat>
		<workSkill>Cooking</workSkill>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Brewing</soundWorking>
		<workAmount>800</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Flora_RawMint</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<abstractIngredients>
			<li Class="ProjectParagon.Core.Recipes.IngredientCountParagon_Water">
				<count>1</count>
			</li>
		</abstractIngredients>
		<products>
			<MintTincture>1</MintTincture>
		</products>
		<researchPrerequisite>CookingII</researchPrerequisite>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Flora_RawMint</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>Flora_RawMint</li>
			</thingDefs>
		</defaultIngredientFilter>
		<recipeUsers>
			<li>AlchemyStance</li><li>ChemicalStation</li><li>DrugLab</li>
			<li>CookingPot</li>
		</recipeUsers>
	</RecipeDef>
	
