<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="BaseGrenadeProjectile">
		<defName>Proj_BeeGrenade</defName>
		<label>bee grenade</label>
		<graphicData>
			<texPath>Things/Projectile/Grenades/BeeGrenade</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<explosionRadius>3.5</explosionRadius>
			<damageDef>ToxicBite</damageDef>
			<damageAmountBase>100</damageAmountBase>
			<explosionDelay>90</explosionDelay>
			<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
			<speed>4</speed>
			<postExplosionSpawnThingDef>Filth_Slime</postExplosionSpawnThingDef>
			<preExplosionSpawnChance>1</preExplosionSpawnChance>
			<secondaryDamage>
				<li>
					<def>Stun</def>
					<amount>30</amount>
					<chance>1</chance>
				</li>
			</secondaryDamage>
			<soundExplode>Explosion_Bomb</soundExplode>
		</projectile>
	</ThingDef>
	<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseGrenadeEquipment">
		<defName>Weapon_BeeGrenade</defName>
		<equipmentType>Primary</equipmentType>
		<label>bee grenade</label>
		<description>The thin biological material forms a spherical shape where the angry bees are.</description>
		<graphicData>
			<texPath>Things/Ammo/HandGrenades/BeeGrenade</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<soundInteract>Interact_Grenade</soundInteract>
		<techLevel>Neolithic</techLevel>
		<stackLimit>25</stackLimit>
		<statBases>
			<Mass>1.0</Mass>
			<Bulk>4</Bulk>
			<MarketValue>25</MarketValue>
			<SightsEfficiency>0.65</SightsEfficiency>
			<RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
		</statBases>
		<weaponTags>
			<li>CE_AI_AOE</li>
			<li>CE_GrenadeNeolithic</li>
		</weaponTags>
		<thingCategories>
			<li>Grenades</li>
		</thingCategories>
		<verbs>
			<li Class="CombatExtended.VerbPropertiesCE">
				<label>throw bee grenade</label>
				<verbClass>CombatExtended.Verb_ShootCEOneUse</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<range>7.0</range>
				<warmupTime>1.8</warmupTime>
				<noiseRadius>4</noiseRadius>
				<ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
				<soundCast>ThrowGrenade</soundCast>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<defaultProjectile>Proj_BeeGrenade</defaultProjectile>
				<onlyManualCast>true</onlyManualCast>
				<ignorePartialLoSBlocker>true</ignorePartialLoSBlocker>
			</li>
		</verbs>
		<detonateProjectile>Proj_BeeGrenade</detonateProjectile>
	</ThingDef>
	<RecipeDef ParentName="GrenadeRecipeBase">
		<defName>MakeBeeGrenade</defName>
		<label>make bee grenade x10</label>
		<description>Craft 10 bee grenade.</description>
		<jobString>Making bee grenade.</jobString>
		<workAmount>15000</workAmount>
		<recipeUsers>
			<li>AlchemyStance</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</filter>
				<count>50</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>Fruits</li>
					</categories>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>Bees</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>	
			<categories>
				<li>Bees</li>
				<li>Fruits</li>
			</categories>
			<thingDefs>
				<li>WoodLog</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Weapon_BeeGrenade>10</Weapon_BeeGrenade>
		</products>
		<modExtensions>
			<li Class="ProjectParagon.Core.ResearchSystem.DefModExtension_RequirementBlueprint">
				<associatedRaces>
					<li>TreantRace</li>
					<li>DryadRace</li>
				</associatedRaces>
			</li>
		</modExtensions>
	</RecipeDef>
</Defs>