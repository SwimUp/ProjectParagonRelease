<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="BaseFilth">
		<defName>Filth_Torf</defName>
		<label>Peat heap</label>
		<description>Will light up if set on fire.</description>
		<useHitPoints>true</useHitPoints>
		<statBases>
			<Beauty>-10</Beauty>
			<Cleanliness>-15</Cleanliness>
			<MaxHitPoints>1000</MaxHitPoints>
			<Flammability>2.0</Flammability>
		</statBases>
		<graphicData>
			<texPath>Things/Filth/LiquidFuel</texPath>
			<color>(91,75,65,97)</color>
		</graphicData>
		<filth>
			<ignoreFilthMultiplierStat>true</ignoreFilthMultiplierStat>
			<disappearsInDays>5~10</disappearsInDays>
			<rainWashes>false</rainWashes>
			<cleaningWorkToReduceThickness>70</cleaningWorkToReduceThickness>
			<canFilthAttach>true</canFilthAttach>
			<maxThickness>1</maxThickness>
			<cleaningSound>Interact_CleanFilth_Fluid</cleaningSound>
			<placementMask>None</placementMask>
		</filth>
	</ThingDef>
	<ThingDef ParentName="BaseFilth">
		<defName>Filth_FireFog</defName>
		<label>fire fog</label>
		<useHitPoints>true</useHitPoints>
		<statBases>
			<Beauty>-25</Beauty>
			<Cleanliness>-5</Cleanliness>
			<Flammability>4</Flammability>
			<MaxHitPoints>200</MaxHitPoints>
		</statBases>
		<graphicData>
			<texPath>Things/Filth/FireFoam</texPath>
			<color>(180, 180, 180, 100)</color>
			<drawSize>2</drawSize>
		</graphicData>
		<filth>
			<ignoreFilthMultiplierStat>true</ignoreFilthMultiplierStat>
			<disappearsInDays>2~4</disappearsInDays>
			<rainWashes>false</rainWashes>
			<cleaningWorkToReduceThickness>100</cleaningWorkToReduceThickness>
			<canFilthAttach>true</canFilthAttach>
			<allowsFire>true</allowsFire>
			<cleaningSound>Interact_CleanFilth_Fluid</cleaningSound>
		</filth>
	</ThingDef>
</Defs>
