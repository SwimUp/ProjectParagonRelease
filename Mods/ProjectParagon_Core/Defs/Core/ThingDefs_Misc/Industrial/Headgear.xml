	<ThingDef ParentName="HatMakeableBase">
		<defName>BaseballCap</defName>
		<label>Baseball cap</label>
		<description>A lightweight cap used to cover the head from the sun.</description>
		<recipeMaker>
			<researchPrerequisite>ComplexClothing</researchPrerequisite>
			<recipeUsers Inherit="false">
				<li>ElectricTailoringBench</li>
				<li>SteamLoom</li>
			</recipeUsers>
		</recipeMaker>
		<techLevel>Industrial</techLevel>
		<graphicData>
			<texPath>Core/Items/Apparel/511Cap/511Cap</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>0.90</drawSize>
		</graphicData>
		<costStuffCount>30</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
		</stuffCategories>
		<costList>
			<ComponentSimple>2</ComponentSimple>
		</costList>
		<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<WorkToMake>3000</WorkToMake>
			<Mass>0.12</Mass>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.20</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.40</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>0.8</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<SocialImpact>0.10</SocialImpact>
		</equippedStatOffsets>
		<apparel>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Core/Items/Apparel/511Cap/511Cap</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>IndustrialBasic</li>
				<li>IndustrialMilitaryBasic</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
			</defaultOutfitTags>
			<canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel"/>
	</ThingDef>
