	</HediffDef>
	<HediffDef ParentName="InfectionBase">
		<defName>Mutation</defName>
		<label>Mutation</label>
		<description>Exposure to a harmful environment has led to a mutation of an organ or limb.</description>
		<initialSeverity>0.001</initialSeverity>
		<maxSeverity>1</maxSeverity>
		<tendable>true</tendable>
		<stages>
			<li>
				<label>useful</label>
				<partEfficiencyOffset>0.5</partEfficiencyOffset>
			</li>
			<li>
				<label>useless</label>
				<minSeverity>0.4</minSeverity>
				<painOffset>0.05</painOffset>
				<partEfficiencyOffset>-0.15</partEfficiencyOffset>
			</li>
			<li>
				<label>dangerous</label>
				<minSeverity>0.8</minSeverity>
				<partEfficiencyOffset>-0.7</partEfficiencyOffset>
				<painOffset>0.15</painOffset>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_TendDuration">
				<baseTendDurationHours>24</baseTendDurationHours>
				<disappearsAtTotalTendQuality>5.0</disappearsAtTotalTendQuality>
			</li>
		</comps>
	</HediffDef>
	<HediffDef ParentName="InfectionBase">
		<defName>RapidAging</defName>
		<label>Rapid aging</label>
		<description>An unknown disease that causes the body to age rapidly.</description>
		<initialSeverity>0.001</initialSeverity>
		<maxSeverity>1</maxSeverity>
		<tendable>true</tendable>
		<stages>
			<li>
				<label>minor</label>
			</li>
			<li>
				<label>major</label>
				<minSeverity>0.4</minSeverity>
			</li>
			<li>
				<label>extreme</label>
				<minSeverity>0.8</minSeverity>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>0.1</severityPerDay>
			</li>
			<li Class="HediffCompProperties_TendDuration">
				<baseTendDurationHours>24</baseTendDurationHours>
				<disappearsAtTotalTendQuality>5.0</disappearsAtTotalTendQuality>
			</li>
			<li Class="ProjectParagon.Core.Hediffs.HediffCompProperties_RapidAging">
				<severityAgingMults>
					<points>
						<li>0, 3</li>
						<li>0.25, 10</li>
						<li>0.5, 30</li>
						<li>1, 60</li>
					</points>
				</severityAgingMults>
			</li>
		</comps>
	</HediffDef>
	<HediffDef ParentName="InfectionBase">
