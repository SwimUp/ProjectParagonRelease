<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffDef ParentName="InfectionBase">
		<defName>HediffDef_MethanePoisoning</defName>
		<label>Methane poisoning</label>
		<description>Exposure to toxic methane gas causes pain, nausea and dizziness.</description>
		<initialSeverity>0.001</initialSeverity>
		<maxSeverity>1</maxSeverity>
		<lethalSeverity>1</lethalSeverity>
		<tendable>false</tendable>
		<makesSickThought>true</makesSickThought>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.5</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<label>minor</label>
				<vomitMtbDays>1.0</vomitMtbDays>
				<statFactors>
					<MoveSpeed>0.9</MoveSpeed>
				</statFactors>
				<capMods>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.15</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>major</label>
				<vomitMtbDays>2.0</vomitMtbDays>
				<minSeverity>0.25</minSeverity>
				<statFactors>
					<MoveSpeed>0.8</MoveSpeed>
				</statFactors>
				<capMods>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.25</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>extreme</label>
				<vomitMtbDays>3.0</vomitMtbDays>
				<minSeverity>0.7</minSeverity>
				<statFactors>
					<MoveSpeed>0.5</MoveSpeed>
				</statFactors>
				<capMods>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.5</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	<HediffDef ParentName="InfectionBase">
