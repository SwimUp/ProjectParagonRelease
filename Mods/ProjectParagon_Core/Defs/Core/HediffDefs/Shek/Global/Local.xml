<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="InfectionBase">
		<defName>HediffDef_CrystallineSkin</defName>
		<label>Crystalline skin</label>
		<description>The salt crystals formed a thick layer, protecting the creature from attacks, but at the same time preventing movement.</description>
		<initialSeverity>1</initialSeverity>
		<maxSeverity>1</maxSeverity>
		<tendable>false</tendable>
		<makesSickThought>false</makesSickThought>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>10000~10000</disappearsAfterTicks>
				<showRemainingTime>true</showRemainingTime>
			</li>
		</comps>
		<stages>
			<li>
				<statFactors>
					<MoveSpeed>0.75</MoveSpeed>
					<IncomingDamageFactor>0.5</IncomingDamageFactor>
				</statFactors>
			</li>
		</stages>
	</HediffDef>

</Defs>
