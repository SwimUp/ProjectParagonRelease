<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<HediffDef ParentName="ChronicDiseaseBase">
		<defName>HediffDef_AcceleratedMetabolism</defName>
		<label>Accelerated metabolism</label>
		<description>This creature has an accelerated metabolism, which forces it to consume more food, but get tired more slowly.</description>
		<hediffClass>ProjectParagon.Core.Hediffs.Hediff_AcceleratedMetabolism</hediffClass>
		<initialSeverity>1</initialSeverity>
		<maxSeverity>1</maxSeverity>
		<tendable>false</tendable>
		<makesSickThought>false</makesSickThought>
		<isBad>false</isBad>
		<stages>
			<li>
				<restFallFactorOffset>-0.25</restFallFactorOffset>
				<hungerRateFactor>1.5</hungerRateFactor>
			</li>
		</stages>
	</HediffDef>
	
</Defs>
