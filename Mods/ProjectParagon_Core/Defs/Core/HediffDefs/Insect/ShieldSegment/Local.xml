<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName = "InfectionBase">
		<defName>Carapace_Parasites</defName>
		<label>carapace parasites</label>
		<description>Parasitic worms that live in the tissues between the keratin plates and muscles. It is quite difficult to get rid of them. Lack of treatment can ultimately lead to the destruction of keratin structures.</description>
		<scenarioCanAdd>true</scenarioCanAdd>
		<tendable>true</tendable>
		<stages>
			<li>
				<restFallFactorOffset>0.5</restFallFactorOffset>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_TendDuration">
				<baseTendDurationHours>24</baseTendDurationHours>
				<disappearsAtTotalTendQuality>3</disappearsAtTotalTendQuality>
			</li>
			<li Class="ProjectParagon.Core.Hediffs.HediffCompProperties_XenosHediff">
				<tags>
					<li>ArachnidDisease</li>
				</tags>
			</li>
			<li Class="ProjectParagon.Core.Hediffs.HediffCompProperties_DestroyPart">
				<ticksRange>300000~450000</ticksRange>
			</li>
		</comps>
	</HediffDef>

</Defs>
