<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<HediffDef>
		<defName>Global_StrengthGain</defName>
		<label>Strength gain</label>
		<labelNoun>a strength gain </labelNoun>
		<description>I feel an increase in strength...</description>
		<hediffClass>HediffWithComps</hediffClass>
		<scenarioCanAdd>true</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-2.0</severityPerDay>
				<showHoursToRecover>true</showHoursToRecover>
			</li>
		</comps>
		<stages>
			<li>
				<minSeverity>0.1</minSeverity>
				<label>minor</label>
				<restFallFactorOffset>-0.10</restFallFactorOffset>
			</li>
			<li>
				<minSeverity>0.4</minSeverity>
				<label>moderate</label>
				<restFallFactorOffset>-0.15</restFallFactorOffset>
			</li>
			<li>
				<minSeverity>0.6</minSeverity>
				<label>severe</label>
				<restFallFactorOffset>-0.20</restFallFactorOffset>
			</li>
		</stages>
	</HediffDef>
	
	<HediffDef>
		<defName>Global_Regeneration</defName>
		<label>Regeneration</label>
		<labelNoun>a regeneration</labelNoun>
		<description>The effect of accelerated recovery of the body is due to the influence of certain substances or plants.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-1.0</severityPerDay>
				<showHoursToRecover>true</showHoursToRecover>
			</li>
		</comps>
		<stages>
			<li>
				<minSeverity>0.1</minSeverity>
				<label>minor</label>
				<naturalHealingFactor>1.25</naturalHealingFactor>
			</li>
			<li>
				<minSeverity>0.4</minSeverity>
				<label>moderate</label>
				<naturalHealingFactor>1.5</naturalHealingFactor>
			</li>
			<li>
				<minSeverity>0.6</minSeverity>
				<label>major</label>
				<naturalHealingFactor>2</naturalHealingFactor>
			</li>
		</stages>
	</HediffDef>
</Defs>
