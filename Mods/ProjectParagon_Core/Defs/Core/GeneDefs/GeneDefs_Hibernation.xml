<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!---->
	<GeneDef Name="GeneHibernationBase" Abstract="True">
		<displayCategory>Hibernation</displayCategory>
		<exclusionTags>
			<li>Hibernation</li>
		</exclusionTags>
	</GeneDef>
	<!---->
	<GeneDef ParentName="GeneHibernationBase">
		<defName>Hibernation_SeasonHibernationFall</defName>
		<label>Fall hibernation</label>
		<labelShortAdj>Fall hibernation</labelShortAdj>
		<description>The creature will begin to gradually fall into hibernation with the onset of autumn. During this time, the pawn will be completely incapacitated.</description>
		<geneClass>ProjectParagon.Core.Things.Genes.Gene_SeasonHibernation</geneClass>
		<iconPath>UI/Icons/Genes/Gene_VerySleepy</iconPath>
		<displayOrderInCategory>80</displayOrderInCategory>
		<biostatCpx>1</biostatCpx>
		<biostatMet>5</biostatMet>
		<modExtensions>
			<li Class="ProjectParagon.Core.Things.Genes.DefExtension_Gene">
				<props Class="ProjectParagon.Core.Things.Genes.GeneProperties_Season">
					<seasonForHibernation>Fall</seasonForHibernation>
				</props>
			</li>
		</modExtensions>
	</GeneDef>
