<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!---->
	<Genes.GeneDefExtended Name="GeneSenseOrgansBase" Abstract="True">
		<displayCategory>SenseOrgans</displayCategory>
	</Genes.GeneDefExtended>
	<!---->
	<Genes.GeneDefExtended ParentName="GeneSenseOrgansBase">
		<defName>SenseOrgans_AdvancedSight</defName>
		<label>Advanced sight</label>
		<description>The carrier of the gene is able to distinguish more colors and sees the world much brighter.</description>
		<iconPath>Core/Genes/AdvancedSight</iconPath>
		<displayOrderInCategory>10</displayOrderInCategory>
		<biostatCpx>1</biostatCpx>
		<biostatMet>-2</biostatMet>
		<capMods>
			<li>
				<capacity>Sight</capacity>
				<postFactor>2</postFactor>
			</li>
		</capMods>
	</Genes.GeneDefExtended>
	<!---->
	<Genes.GeneDefExtended ParentName="GeneSenseOrgansBase">
		<defName>SenseOrgans_Blindness</defName>
		<label>Blindness</label>
		<description>The wearer's eyes are undeveloped and cannot analyze visual information.</description>
		<iconPath>Core/Genes/Blindness</iconPath>
		<displayOrderInCategory>20</displayOrderInCategory>
		<biostatCpx>1</biostatCpx>
		<biostatMet>2</biostatMet>
		<capMods>
			<li>
				<capacity>Sight</capacity>
				<postFactor>0</postFactor>
			</li>
		</capMods>
	</Genes.GeneDefExtended>
	<!---->
	<Genes.GeneDefExtended ParentName="GeneSenseOrgansBase">
		<defName>SenseOrgans_AdvancedHearing</defName>
		<label>Advanced hearing</label>
		<description>The carrier of the gene has altered ears, which allows them to absorb much more auditory information and move at the desire of the carrier.</description>
		<iconPath>Core/Genes/AdvancedHearing</iconPath>
		<displayOrderInCategory>30</displayOrderInCategory>
		<biostatCpx>1</biostatCpx>
		<biostatMet>-2</biostatMet>
		<capMods>
			<li>
				<capacity>Hearing</capacity>
				<postFactor>2</postFactor>
			</li>
		</capMods>
	</Genes.GeneDefExtended>
	<!---->
	<Genes.GeneDefExtended ParentName="GeneSenseOrgansBase">
		<defName>SenseOrgans_Deafness</defName>
		<label>Deafness</label>
		<description>The creature absolutely does not perceive auditory information at the level of the brain.</description>
		<iconPath>Core/Genes/Deafness</iconPath>
		<displayOrderInCategory>40</displayOrderInCategory>
		<biostatCpx>1</biostatCpx>
		<biostatMet>2</biostatMet>
		<capMods>
			<li>
				<capacity>Hearing</capacity>
				<postFactor>0</postFactor>
			</li>
		</capMods>
	</Genes.GeneDefExtended>
	<!---->
	<Genes.GeneDefExtended ParentName="GeneSenseOrgansBase">
		<defName>SenseOrgans_AdvancedTalking</defName>
		<label>Advanced talking</label>
		<description>A carrier of the gene can make sounds on a larger number of tones. In addition, the voice can be changed at will.</description>
		<iconPath>Core/Genes/AdvancedTalking</iconPath>
		<displayOrderInCategory>50</displayOrderInCategory>
		<biostatCpx>1</biostatCpx>
		<biostatMet>-2</biostatMet>
		<capMods>
			<li>
				<capacity>Talking</capacity>
				<postFactor>2</postFactor>
			</li>
		</capMods>
	</Genes.GeneDefExtended>
	<!---->
	<Genes.GeneDefExtended ParentName="GeneSenseOrgansBase">
		<defName>SenseOrgans_Silence</defName>
		<label>Silence</label>
		<description>The speech organs of the gene carrier do not function.</description>
		<iconPath>Core/Genes/Silence</iconPath>
		<displayOrderInCategory>60</displayOrderInCategory>
		<biostatCpx>1</biostatCpx>
		<biostatMet>2</biostatMet>
		<capMods>
			<li>
				<capacity>Talking</capacity>
				<postFactor>0</postFactor>
			</li>
		</capMods>
	</Genes.GeneDefExtended>
	<!---->
</Defs>
