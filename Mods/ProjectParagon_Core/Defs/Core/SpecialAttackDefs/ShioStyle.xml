<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ProjectParagon.Core.FightSystem.SpecialAttackDef>
		<defName>CircularBlow</defName>
		<label>Circular blow</label>
		<description>A sharp swing of the sword directed in a circle. Allows you to stun opponents and buy time.</description>
		<gizmoClass>ProjectParagon.Core.FightSystem.Command_SpecialAttack</gizmoClass>
		<iconTexturePath>Core/UI/FightSystem/Icon_CircularBlow</iconTexturePath>
		<verbProperties>
			<verbClass>ProjectParagon.Core.FightSystem.Verb_SpecialAttack_CustomMelee</verbClass>
			<meleeDamageDef>Cut</meleeDamageDef>
			<targetParams>
				<canTargetSelf>false</canTargetSelf>
				<canTargetPawns>true</canTargetPawns>
				<canTargetBuildings>true</canTargetBuildings>
				<canTargetAnimals>true</canTargetAnimals>
				<canTargetHumans>true</canTargetHumans>
				<canTargetMechs>true</canTargetMechs>
			</targetParams>
		</verbProperties>
		<requirements>
			<reqFightningStyle>ShioStyle</reqFightningStyle>
			<reqSubSpec>LongSwords</reqSubSpec>
			<reqWeaponSpecLevel>8</reqWeaponSpecLevel>
		</requirements>
		<nakedDamageMultiplier>1.0</nakedDamageMultiplier>
		<nakedArmorPenetrationMultiplier>1.0</nakedArmorPenetrationMultiplier>
		<stuffMults>
			<li>
				<stuffCategory>Leathery</stuffCategory>
				<damageMult>0.9</damageMult>
				<armorPetentrationMult>1.0</armorPetentrationMult>
			</li>
			<li>
				<stuffCategory>Metallic</stuffCategory>
				<damageMult>0.7</damageMult>
				<armorPetentrationMult>1.0</armorPetentrationMult>
			</li>
		</stuffMults>
		<hitChanceMult>0.8</hitChanceMult>
		<chanceFactor>0.25</chanceFactor>
		<minRest>0.3</minRest>
		<useRest>true</useRest>
		<restUseMultiplier>8</restUseMultiplier>
		<aoeSettings>
			<pattern>
				<li>(0, 1)</li>
				<li>(1, 1)</li>
				<li>(-1, 1)</li>
				<li>(1, 0)</li>
				<li>(-1, 0)</li>
				<li>(0, -1)</li>
				<li>(1, -1)</li>
				<li>(-1, -1)</li>
			</pattern>
			<rotateByCaster>true</rotateByCaster>
		</aoeSettings>
	</ProjectParagon.Core.FightSystem.SpecialAttackDef>
	
