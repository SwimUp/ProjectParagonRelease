<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ProjectParagon.Core.FactionControl.RaidKnowledgeDef>
		<defName>General</defName>
		<label>General</label>
		<description>General knowledge about the settlement.</description>
		<changePerDay>-0.025</changePerDay>
		<worker Class="ProjectParagon.Core.FactionControl.RaidKnowledgeCountWorker_General">
			<pointsMultiplierByFactionTechLevel>
				<points>
					<li>(0, 1.0)</li> <!-- Undefined -->
					<li>(0, 1.1)</li> <!-- Animal -->
					<li>(0, 1.15)</li> <!-- Neolithic -->
					<li>(0, 1.18)</li> <!-- Medieval -->
					<li>(0, 1.2)</li> <!-- Industrial -->
					<li>(0, 1.25)</li> <!-- Spacer -->
					<li>(0, 1.3)</li> <!-- Ultra -->
					<li>(0, 1.35)</li> <!-- Archotech -->
				</points>
			</pointsMultiplierByFactionTechLevel>
			<baseValue>0.25</baseValue>
		</worker>
	</ProjectParagon.Core.FactionControl.RaidKnowledgeDef>
	
	<ProjectParagon.Core.FactionControl.RaidKnowledgeDef>
		<defName>Defense</defName>
		<label>Defense</label>
		<description>Determines how much the enemy is aware of the protection of the settlement. This value reflects the total amount of information, and not its exact characteristics.</description>
		<changePerDay>-0.03</changePerDay>
		<worker Class="ProjectParagon.Core.FactionControl.RaidKnowledgeCountWorker_Defense">
			<pointsMultiplierByFactionTechLevel>
				<points>
					<li>(0, 1.0)</li> <!-- Undefined -->
					<li>(0, 1.1)</li> <!-- Animal -->
					<li>(0, 1.15)</li> <!-- Neolithic -->
					<li>(0, 1.18)</li> <!-- Medieval -->
					<li>(0, 1.2)</li> <!-- Industrial -->
					<li>(0, 1.25)</li> <!-- Spacer -->
					<li>(0, 1.3)</li> <!-- Ultra -->
					<li>(0, 1.35)</li> <!-- Archotech -->
				</points>
			</pointsMultiplierByFactionTechLevel>
			<baseValue>0.25</baseValue>
		</worker>
	</ProjectParagon.Core.FactionControl.RaidKnowledgeDef>
	
	<ProjectParagon.Core.FactionControl.RaidKnowledgeDef>
		<defName>DegreeDefense</defName>
		<label>Degree of defense</label>
		<description>Determines how much the enemy is aware of the degree of protection of the settlement. This value indicates how strongly the base is fortified (everything except firepower).</description>
		<changePerDay>-0.03</changePerDay>
		<worker Class="ProjectParagon.Core.FactionControl.RaidKnowledgeCountWorker_DegreeDefense">
			<designatorDropdownGroupDefs>
				<li>Structure_Walls</li>
			</designatorDropdownGroupDefs>
			<thingFilter>
			
			</thingFilter>
		</worker>
	</ProjectParagon.Core.FactionControl.RaidKnowledgeDef>
	
	<ProjectParagon.Core.FactionControl.RaidKnowledgeDef>
		<defName>ProtectiveBuildings</defName>
		<label>Protective buildings</label>
		<description>Determines how much the enemy is aware of the settlement's defenses. This value indicates how much firepower the settlement has in defense.</description>
		<changePerDay>-0.035</changePerDay>
		<worker Class="ProjectParagon.Core.FactionControl.RaidKnowledgeCountWorker_ProtectiveBuildings">
			<designatorDropdownGroupDefs>
				<li>MedievalSiegeWeapons</li>
			</designatorDropdownGroupDefs>
			<thingFilter>
			
			</thingFilter>
		</worker>
	</ProjectParagon.Core.FactionControl.RaidKnowledgeDef>
</Defs>