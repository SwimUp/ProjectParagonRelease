<Defs>
	<!---->
	<AbilityDef ParentName="WordOfBase">
		<defName>WordOfConfidence</defName>
		<label>Word of confidence</label>
		<description>You are embedded in the trust of the target, acting on her thoughts and making her believe in yourself. The productivity of the target increases.</description>
		<level>2</level>
		<iconPath>Core/UI/Abilities/WordOfConfidence</iconPath>
		<statBases>
			<Ability_PsyfocusCost>0.4</Ability_PsyfocusCost>
			<Ability_Duration>5000</Ability_Duration>
		</statBases>
		<verbProperties>
			<warmupTime>2</warmupTime>
			<targetParams>
				<canTargetAnimals>False</canTargetAnimals>
				<canTargetSelf>True</canTargetSelf>
			</targetParams>
		</verbProperties>
		<comps>
			<li Class="CompProperties_AbilityGiveHediff">
				<compClass>CompAbilityEffect_GiveHediff</compClass>
				<hediffDef>WordOfConfidence</hediffDef>
				<durationMultiplier>PsychicSensitivity</durationMultiplier>
				<onlyBrain>True</onlyBrain>
				<psychic>True</psychic>
				<applicableToMechs>False</applicableToMechs>
			</li>
			<li Class="CompProperties_AbilitySocialInteraction">
				<interactionDef>WordOfJoy</interactionDef>
			</li>
		</comps>
	</AbilityDef>
	<HediffDef ParentName="PsycastHediffBase">
		<defName>WordOfConfidence</defName>
		<label>Confidence</label>
		<description>Artificially induced self-confidence.</description>
		<isBad>false</isBad>
		<stages>
			<li>
				<statFactors>
					<WorkSpeedGlobal>1.3</WorkSpeedGlobal>
				</statFactors>
			</li>
		</stages>
	</HediffDef>
	<!---->
	<AbilityDef ParentName="PsycastBase">
		<defName>MindControl</defName>
		<label>Mind control</label>
		<description>You can make the target move in a random direction.</description>
		<level>2</level>
		<iconPath>Core/UI/Abilities/MindControl</iconPath>
		<writeCombatLog>True</writeCombatLog>
		<statBases>
			<Ability_EntropyGain>30</Ability_EntropyGain>
			<Ability_PsyfocusCost>0.02</Ability_PsyfocusCost>
			<Ability_Duration>20</Ability_Duration>
		</statBases>
		<verbProperties>
			<warmupTime>0.5</warmupTime>
			<range>20.0</range>
			<targetParams>
				<canTargetAnimals>True</canTargetAnimals>
				<neverTargetIncapacitated>True</neverTargetIncapacitated>
			</targetParams>
		</verbProperties>
		<comps>
			<li Class="CompProperties_AbilityForceJob">
				<compClass>CompAbilityEffect_ForceJob</compClass>
				<jobDef>Goto</jobDef>
				<destination>RandomInRange</destination>
				<randomRange>40.0~56.0</randomRange>
				<durationMultiplier>PsychicSensitivity</durationMultiplier>
				<psychic>True</psychic>
				<goodwillImpact>-15</goodwillImpact>
			</li>
			<li Class="CompProperties_AbilityFleckOnTarget">
				<fleckDef>PsycastPsychicEffect</fleckDef>
			</li>
		</comps>
	</AbilityDef>
