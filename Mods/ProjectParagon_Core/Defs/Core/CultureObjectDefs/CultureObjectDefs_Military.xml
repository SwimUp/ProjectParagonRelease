				<li>(1, 1)</li>
				<!-- Animal -->
				<li>(2, 1)</li>
				<!-- Neolithic -->
				<li>(3, 1.1)</li>
				<!-- Medieval -->
				<li>(4, 1.15)</li>
				<!-- Industrial -->
				<li>(5, 1.2)</li>
				<!-- Spacer -->
				<li>(6, 1.25)</li>
				<!-- Ultra -->
				<li>(7, 1.3)</li>
				<!-- Archotech -->
			</points>
		</cultureMultiplierByTechLevel>
		<techLevel>Medieval</techLevel>
		<requiredResearch>AdvancedDefense</requiredResearch>
		<blueprintDef>AdvancedArchitecturalBlueprint</blueprintDef>
		<workToMake>50000</workToMake>
		<recipeUsers>
			<li>AdvancedArchitecturalTable</li>
		</recipeUsers>
