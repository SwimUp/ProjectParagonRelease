	<ProjectParagon.Core.WorldObjects.CultureObjectDef>
		<defName>Signal_Tower</defName>
		<label>Signal tower</label>
		<description>A tall tower that allows you to effectively view the area. Equipped with a signal light.</description>
		<category>Category_Military</category>
		<daysTimeout>30</daysTimeout>
		<worldObjectIcon>Core/World/Objects/CultureSites/Signal_Tower</worldObjectIcon>
		<cultureAfterBuild>10</cultureAfterBuild>
		<thingsCount>
			<li>
				<thingCategoryDef>StoneBlocks</thingCategoryDef>
