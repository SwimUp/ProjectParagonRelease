<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<AlienRace.ThingDef_AlienRace ParentName="ParagonBasePawn">
		<defName>ZorgRace</defName>
		<label>zorg</label>
		<description>Bloodthirsty humanoids of strong physique. They differ in aggressiveness and thirst for war. They hate xenos and regularly engage in cannibalism. They are quite stupid and naive. The zorg diet consists mainly of meat-containing products.</description>
		<statBases>
			<PsychicSensitivity>1</PsychicSensitivity>
			<ToxicResistance>0.5</ToxicResistance>
			<ComfyTemperatureMin>0</ComfyTemperatureMin>
			<ComfyTemperatureMax>30</ComfyTemperatureMax>
			<LeatherAmount>30</LeatherAmount>
			<RoyalFavorValue>0</RoyalFavorValue>
			<ArmorRating_Blunt>0.75</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.2</ArmorRating_Sharp>
			<MeleeDodgeChance>0.5</MeleeDodgeChance>
			<MeleeCritChance>1.5</MeleeCritChance>
			<MeleeParryChance>0.5</MeleeParryChance>
			<MarketValue>1000</MarketValue>
			<MoveSpeed>4.2</MoveSpeed>
			<Flammability>0.85</Flammability>
			<CarryingCapacity>70</CarryingCapacity>
			<MentalBreakThreshold>0.05</MentalBreakThreshold>
			<ResearchSpeed>0.25</ResearchSpeed>
			<BloodAmountPawn>4</BloodAmountPawn>
			<BloodTransfusionIntolerance>0.0025</BloodTransfusionIntolerance>
			<ImmunityGainSpeed>1.0</ImmunityGainSpeed>
		</statBases>
		<comps>
			<li>
				<compClass>CombatExtended.CompPawnGizmo</compClass>
			</li>
			<li Class="ProjectParagon.Core.Things.Pawns.CompProperties_PawnGizmos">
				<drawCommands>
					<li Class="ProjectParagon.Core.Things.Pawns.Command_AnimalFury"/>
				</drawCommands>
			</li>
			<li Class="CombatExtended.CompProperties_Suppressable"/>
			<li Class="ProjectParagon.Core.Things.Pawns.CompProperties_PawnParagon"/>
		</comps>
		<tools>
			<li Class="CombatExtended.ToolCE">
				<label>left fist</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>1</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
				<chanceFactor>0.4</chanceFactor>
				<armorPenetrationBlunt>1</armorPenetrationBlunt>
			</li>
			<li Class="CombatExtended.ToolCE">
				<label>right fist</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>1</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
				<chanceFactor>0.4</chanceFactor>
				<armorPenetrationBlunt>1</armorPenetrationBlunt>
			</li>
			<li Class="CombatExtended.ToolCE">
				<label>teeth</label>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>1.0</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
				<chanceFactor>0.07</chanceFactor>
				<soundMeleeHit>Pawn_Melee_HumanBite_Hit</soundMeleeHit>
				<soundMeleeMiss>Pawn_Melee_HumanBite_Miss</soundMeleeMiss>
				<armorPenetrationBlunt>2</armorPenetrationBlunt>
			</li>
			<li Class="CombatExtended.ToolCE">
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>3.0</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>14</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
				<chanceFactor>0.5</chanceFactor>
				<armorPenetrationBlunt>2.5</armorPenetrationBlunt>
			</li>
		</tools>
		<alienRace>
			<generalSettings>
				<humanRecipeImport>true</humanRecipeImport>
				<alienPartGenerator>
					<customHeadDrawSize>(1.2, 1.2)</customHeadDrawSize>
					<headOffset>(0.0, 0.09)</headOffset>
					<headTypes>
						<li>Male_AverageNormal</li>
						<li>Male_AveragePointy</li>
						<li>Male_AverageWide</li>
						<li>Male_NarrowNormal</li>
						<li>Male_NarrowPointy</li>
						<li>Male_NarrowWide</li>
						<li>Female_AverageNormal</li>
						<li>Female_AveragePointy</li>
						<li>Female_AverageWide</li>
						<li>Female_NarrowNormal</li>
						<li>Female_NarrowPointy</li>
						<li>Female_NarrowWide</li>
					</headTypes>
					<customDrawSize>(1.4, 1.4)</customDrawSize>
					<bodyTypes>
						<li>Male</li>
					</bodyTypes>
					<!-- <useGenderedHeads>false</useGenderedHeads> -->
					<customPortraitDrawSize>(1.2, 1.2)</customPortraitDrawSize>
					<customPortraitHeadDrawSize>(1.2, 1.2)</customPortraitHeadDrawSize>
					<colorChannels>
						<li>
							<name>skin</name>
							<first Class="ColorGenerator_Options">
								<options>
									<li>
										<weight>2</weight>
										<only>RGBA(87,87,90,255)</only>
									</li>
								</options>
							</first>
						</li>
						<li>
							<name>hair</name>
							<first Class="AlienRace.ColorGenerator_CustomAlienChannel">
								<colorChannel>skin_1</colorChannel>
							</first>
						</li>
					</colorChannels>
				</alienPartGenerator>
				<immuneToAge>false</immuneToAge>
				<maxDamageForSocialfight>8</maxDamageForSocialfight>
				<allowHumanBios>false</allowHumanBios>
				<maleGenderProbability>0.5</maleGenderProbability>
				<chemicalSettings>
				</chemicalSettings>
				<traitCount>0~1</traitCount>
				<forcedRaceTraitEntries>
					<li>
						<defName>Bloodlust</defName>
						<chance>50</chance>
					</li>
					<li>
						<defName>Cannibal</defName>
						<chance>100</chance>
					</li>
					<li>
						<defName>TP_Aggressiveness</defName>
						<chance>50</chance>
					</li>
					<li>
						<defName>Xenophobia</defName>
						<chance>50</chance>
						<degree>1</degree>
					</li>
				</forcedRaceTraitEntries>
				<disallowedTraits>
					<li>
						<defName>TooSmart</defName>
					</li>
					<li>
						<defName>FastLearner</defName>
					</li>
					<li>
						<defName>GreatMemory</defName>
					</li>
					<li>
						<defName>TorturedArtist</defName>
					</li>
					<li>
						<defName>Beauty</defName>
						<degree>1</degree>
					</li>
					<li>
						<defName>Beauty</defName>
						<degree>2</degree>
					</li>
					<li>
						<defName>TP_Elegance</defName>
					</li>
					<li>
						<defName>TP_Wisdom</defName>
					</li>
				</disallowedTraits>
			</generalSettings>
			<graphicPaths>
				<body>Core/Races/Zorg/Body/</body>
				<head>
					<path>Core/Races/Zorg/Head/Average_Plain</path>
				</head>
			</graphicPaths>
			<styleSettings>
				<li>
					<key>HairDef</key>
					<value>
						<hasStyle>true</hasStyle>
						<styleTags>
						</styleTags>
					</value>
				</li>
				<li>
					<key>TattooDef</key>
					<value>
						<hasStyle>true</hasStyle>
						<styleTags>
						</styleTags>
					</value>
				</li>
				<li>
					<key>BeardDef</key>
					<value>
						<hasStyle>true</hasStyle>
						<styleTags>
						</styleTags>
					</value>
				</li>
			</styleSettings>
			<relationSettings>
				<relationChanceModifierChild>1</relationChanceModifierChild>
				<relationChanceModifierExLover>1</relationChanceModifierExLover>
				<relationChanceModifierExSpouse>1</relationChanceModifierExSpouse>
				<relationChanceModifierFiance>1</relationChanceModifierFiance>
				<relationChanceModifierLover>1</relationChanceModifierLover>
				<relationChanceModifierParent>1</relationChanceModifierParent>
				<relationChanceModifierSibling>1</relationChanceModifierSibling>
				<relationChanceModifierSpouse>1</relationChanceModifierSpouse>
			</relationSettings>
			<thoughtSettings>
				<cannotReceiveThoughts>
				</cannotReceiveThoughts>
				<ateThoughtSpecific>
				</ateThoughtSpecific>
				<replacerList>
				</replacerList>
			</thoughtSettings>
			<raceRestriction>
				<blackApparelList>	   
				</blackApparelList>
			</raceRestriction>
		</alienRace>
		<modExtensions>
			<li Class="CombatExtended.RacePropertiesExtensionCE">
				<bodyShape>Humanoid</bodyShape>
			</li>
			<li Class="ProjectParagon.Core.Things.RacePropertiesDefModExtension">
				<overrideMeatDef>Meat_Human</overrideMeatDef>
				<bloodDef>ZorgBlood</bloodDef>
				<xenosHediffFilter>
				</xenosHediffFilter>
				<defaultRaceLanguage>Zogg</defaultRaceLanguage>
			</li>
		</modExtensions>
		<race>
			<thinkTreeMain>Humanlike</thinkTreeMain>
			<nameGenerator>NamerPersonZorg</nameGenerator>
			<nameGeneratorFemale>NamerPersonZorgFemale</nameGeneratorFemale>
			<thinkTreeConstant>HumanlikeConstant</thinkTreeConstant>
			<intelligence>Humanlike</intelligence>
			<makesFootprints>true</makesFootprints>
			<lifeExpectancy>60</lifeExpectancy>
			<leatherDef>Leather_Human</leatherDef>
			<nameCategory>HumanStandard</nameCategory>
			<body>ZorgBody</body>
			<baseBodySize>1.1</baseBodySize>
			<baseHealthScale>1.25</baseHealthScale>
			<baseHungerRate>1.0</baseHungerRate>
			<foodType>CarnivoreAnimal</foodType>
			<hasGenders>true</hasGenders>
			<gestationPeriodDays>55</gestationPeriodDays>
			<litterSizeCurve>
				<points>
					<li>(0.5, 0)</li>
					<li>(1, 1)</li>
					<li>(1.01, 0.02)</li>
					<li>(3.5, 0)</li>
				</points>
			</litterSizeCurve>
			<lifeStageAges>
