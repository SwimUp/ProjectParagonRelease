					<li>(14,0)</li>
					<li>(16,100)</li>
					<li>(50,50)</li>
					<li>(60,30)</li>
					<li>(70,10)</li>
					<li>(80,5)</li>
					<li>(90,0)</li>
				</points>
			</ageGenerationCurve>
			<hediffGiverSets>
				<li>OrganicHumanlikeGroup</li>
				<li>OrganicStandard</li>
				<li>Human</li>
			</hediffGiverSets>
		</race>
		<recipes>
			<li>ExciseCarcinoma</li>
			<li>AdministerMechSerumHealer</li>
			<li>RemoveBodyPart</li>
			<li>Euthanize</li>
			<li>Anesthetize</li>
			<li>CureScaria</li>
			<li MayRequire="Ludeon.RimWorld.Royalty">CureBloodRot</li>
