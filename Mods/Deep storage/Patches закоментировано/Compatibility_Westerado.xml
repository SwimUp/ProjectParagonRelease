<Patch>
  <!-- Westerado, patch by craze on Steam -->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Westerado</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="LWM_Food_Basket"]/building/fixedStorageSettings/filter/thingDefs</xpath>
          <value>
            <li>SmokedJerky_Westerado</li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="LWM_MealRack"]/building/fixedStorageSettings/filter/thingDefs</xpath>
          <value>
            <li>Popcorn_Westerado</li>
          </value>
        </li>
        <li Class="LWM.DeepStorage.PatchMessage">
          <message>LWM Deep Storage: activated compatibility patch for Westerado</message>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>
