<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- ===== Leather Boots ===== -->
    <ThingDef ParentName="ApparelMakeableBase">
		<defName>DankPyon_Footwear_BootsLeather</defName>
		<label>boots</label>
		<description>Tanned leathers sewn to fit the foot. Provides minimal protection. Wearing leather boots will increase movement speed.</description>
		<graphicData>
			<texPath>Apparel/Footwear/BootsLeather</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Medieval</techLevel>
		<tradeability>Sellable</tradeability>
        <generateCommonality>0.1</generateCommonality>

		<stuffCategories>
			<li>Leathery</li>
		</stuffCategories>
		<costStuffCount>50</costStuffCount>

		<statBases>
			<MaxHitPoints>115</MaxHitPoints>
			<WorkToMake>1000</WorkToMake>
			<Mass>0.25</Mass>
			<StuffEffectMultiplierArmor>0.18</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>1</EquipDelay>
		</statBases>

		<equippedStatOffsets>
			<MoveSpeed>0.05</MoveSpeed>
		</equippedStatOffsets>

		<thingCategories Inherit="False">
			<li>DankPyon_Footwear</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>Feet</li>
			</bodyPartGroups>
			<layers>
				<li>Middle</li>
			</layers>
			<tags>
				<li>DankPyon_Bandit</li>
                <li>DankPyon_Mercenary</li>
				<li>DankPyon_MercenaryHeavy</li>
				<li>DankPyon_Archer</li>
                <li>DankPyon_Footman</li>
                <li>DankPyon_Billman</li>

				<li>MedievalBasic</li>
				<li>MedievalAdvanced</li>
                <li>MedievalMilitaryBasic</li>
                <li>MedievalMilitaryDecent</li>
            </tags>
			<defaultOutfitTags>
				<li>Soldier</li>
            </defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>DankPyon_ProtectiveClothing</researchPrerequisite>
			<skillRequirements>
				<Crafting>6</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>ElectricSmithy</li>
				<li>FueledSmithy</li>
				<li>DankPyon_Anvil</li>
			</recipeUsers>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
    </ThingDef>

