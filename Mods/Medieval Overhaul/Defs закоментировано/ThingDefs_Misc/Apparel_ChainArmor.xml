<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <ThingDef ParentName="ArmorSmithableBase">
        <defName>DankPyon_Apparel_Hauberk</defName>
        <label>hauberk</label>
        <description>A basic and simple hauberk. Offers decent and affordable protection against slashing and piercing attacks.</description>
        <graphicData>
			<texPath>Apparel/ChainArmor/Chain_Mail</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <recipeMaker>
            <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
            <skillRequirements>
                <Crafting>6</Crafting>
            </skillRequirements>
            <researchPrerequisite>DankPyon_ChainArmor</researchPrerequisite>
        </recipeMaker>
       
		<costList>
			<DankPyon_IronIngot>80</DankPyon_IronIngot>
		</costList>

        <statBases>
            <WorkToMake>27000</WorkToMake>
            <MaxHitPoints>230</MaxHitPoints>
            <Mass>6</Mass>
            <ArmorRating_Sharp>0.5355</ArmorRating_Sharp>
      		<ArmorRating_Blunt>0.2394</ArmorRating_Blunt>
			<Insulation_Cold>0</Insulation_Cold>
      		<ArmorRating_Heat>0</ArmorRating_Heat>
            <EquipDelay>10</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>-0.4</MoveSpeed>
        </equippedStatOffsets>
        <thingCategories>
            <li>Apparel</li>
        </thingCategories>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
                <li>Shoulders</li>
                <li>Arms</li>
            </bodyPartGroups>
            <wornGraphicPath>Apparel/ChainArmor/Chain_Mail</wornGraphicPath>
            <tags>
				<li>DankPyon_Bandit</li>
                <li>DankPyon_Mercenary</li>
				<li>DankPyon_MercenaryHeavy</li>
				<li>DankPyon_Archer</li>
                <li>DankPyon_Footman</li>
                <li>DankPyon_Billman</li>
                <li>DankPyon_Knight</li>
                <li>DankPyon_HedgeKnight</li>

                <li>MedievalMilitaryDecent</li>
                <li>MedievalMilitaryBasic</li>
            </tags>
            <layers>
                <li>Middle</li>
            </layers>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
    </ThingDef>
	
	    <ThingDef ParentName="ArmorSmithableBase">
        <defName>DankPyon_Apparel_Heavy_Hauberk</defName>
        <label>heavy hauberk</label>
        <description>A full-body suit of heavy chainmail reinforced in key places with additional sheets and links of metal. Quite fatiguing to wear, but very protective.</description>
        <graphicData>
			<texPath>Apparel/ChainArmor/Chain_Mail_Pad</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <recipeMaker>
            <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
            <skillRequirements>
                <Crafting>6</Crafting>
            </skillRequirements>
            <researchPrerequisite>DankPyon_ChainArmor</researchPrerequisite>
        </recipeMaker>
        
		<costList>
			<DankPyon_IronIngot>100</DankPyon_IronIngot>
		</costList>

        <statBases>
            <WorkToMake>28000</WorkToMake>
            <MaxHitPoints>250</MaxHitPoints>
            <Mass>8</Mass>
            <ArmorRating_Sharp>0.5355</ArmorRating_Sharp>
      		<ArmorRating_Blunt>0.2394</ArmorRating_Blunt>
			<Insulation_Cold>0</Insulation_Cold>
      		<ArmorRating_Heat>0</ArmorRating_Heat>
            <EquipDelay>10</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>-0.5</MoveSpeed>
        </equippedStatOffsets>
        <thingCategories>
            <li>Apparel</li>
        </thingCategories>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <wornGraphicPath>Apparel/ChainArmor/Chain_Mail_Pad</wornGraphicPath>
            <tags>
                <li>DankPyon_Mercenary</li>
				<li>DankPyon_Archer</li>
                <li>DankPyon_Footman</li>
                <li>DankPyon_Billman</li>

                <li>MedievalMilitaryDecent</li>
                <li>MedievalMilitaryBasic</li>
            </tags>
            <layers>
                <li>Shell</li>
            </layers>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
    </ThingDef>


</Defs>