<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- =============================== Misc ============================ -->
  
  <ThingDef ParentName="BuildingBase">
    <defName>DankPyon_BrokenCart</defName>
    <label>broken cart</label>
    <description>A dust-covered fragment of the old wagon. Moss slowly makes its way up, covering deep scratches and blood stains - traces of long forgotten struggle. Whatever happened here, heroes of that story are somewhere else, either above or under the ground. Supplies are left for anyone to take.</description>
    <category>Building</category>
    <graphicData>
      <texPath>Exotic/BrokenCart</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <drawSize>(2,2)</drawSize>
      <damageData>
        <rect>(0.1,0.1,1.8,1.8)</rect>
      </damageData>
      <shadowData>
        <volume>(1.39,0.5,1.25)</volume>
      </shadowData>
    </graphicData>

    <rotatable>false</rotatable>
    <altitudeLayer>Building</altitudeLayer>
    <pathCost>42</pathCost>
    <blockWind>true</blockWind>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.50</fillPercent>
    <size>(2,2)</size>

    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <Flammability>0</Flammability>
      <Beauty>-20</Beauty>
      <WorkToBuild>8000</WorkToBuild>
    </statBases>

    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <killedLeavings>
      <WoodLog>40</WoodLog>
      <DankPyon_ComponentBasic>2</DankPyon_ComponentBasic>
    </killedLeavings>

    <costList>
      <DankPyon_ComponentBasic>10</DankPyon_ComponentBasic>
      <WoodLog>80</WoodLog>
    </costList>

    <building>
      <claimable>false</claimable>
      <alwaysDeconstructible>true</alwaysDeconstructible>
    </building>
    <selectable>true</selectable>
    <soundImpactDefault>BulletImpact_Wood</soundImpactDefault>
    <drawerType>MapMeshOnly</drawerType>
    <repairEffect>ConstructDirt</repairEffect>
  </ThingDef>

</Defs>