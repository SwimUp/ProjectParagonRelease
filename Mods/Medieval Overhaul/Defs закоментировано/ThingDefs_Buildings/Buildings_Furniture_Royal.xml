<!-- Royal Chair -->
<ThingDef ParentName="DankPyon_FurnitureWithQualityBase">
  <defName>DankPyon_RoyalArmchair</defName>
  <label>royal armchair</label>
  <description>A luxurious, large, soft, comfy seat. Great for relaxation. Can be used at tables, work stations, and elsewhere.</description>

  <graphicData>
    <texPath>Furniture/RoyalArmchair</texPath>
    <graphicClass>Graphic_Multi</graphicClass>
    <shaderType>CutoutComplex</shaderType>
    <drawSize>(3,3)</drawSize>
    <damageData>
      <rectN>(0,0,1,0.703125)</rectN>
      <rectS>(0.09375,0,0.84375,1)</rectS>
      <rectE>(0,0,0.84375,0.625)</rectE>
      <rectW>(0.15625,0,0.84375,0.625)</rectW>
    </damageData>
    <shadowData>
      <volume>(0.3, 0.33, 0.3)</volume>
    </shadowData>
  </graphicData>

  <uiIconScale>0.9</uiIconScale>
  <altitudeLayer>Building</altitudeLayer>

  <statBases>
    <MaxHitPoints>120</MaxHitPoints>
    <WorkToBuild>14000</WorkToBuild>
    <Mass>18</Mass>
    <Flammability>1.0</Flammability>
    <Beauty>30</Beauty>
    <Comfort>0.95</Comfort>
  </statBases>

  <socialPropernessMatters>true</socialPropernessMatters>
  <stuffCategories>
    <li>Fabric</li>
    <li>Leathery</li>
  </stuffCategories>
  <costStuffCount>110</costStuffCount>

  <pathCost>30</pathCost>
  <fillPercent>0.40</fillPercent>
  <designationHotKey>Misc8</designationHotKey>
  <defaultPlacingRot>South</defaultPlacingRot>
  <constructionSkillPrerequisite>5</constructionSkillPrerequisite>
  <building>
    <isSittable>true</isSittable>
    <destroySound>BuildingDestroyed_Soft_Small</destroySound>
  </building>
  <researchPrerequisites>
    <li>DankPyon_RoyalRusticFurniture</li>
  </researchPrerequisites>
  <designationCategory>DankPyon_RusticFurniture</designationCategory>
</ThingDef>

