  <!-- Royal End Table -->
  <ThingDef ParentName="DankPyon_TableBase">
    <defName>DankPyon_RoyalEndTable</defName>
    <label>royal end table</label>
    <description>A small luxurios gilded bedside table which makes nearby beds more comfortable. Must be placed directly adjacent to the head of the bed. Placing more than one end table near the same bed has no effect.</description>
    <surfaceType>Item</surfaceType>
    <graphicData>
      <texPath>Furniture/RoyalEndTable</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <shadowData>
        <volume>(0.3, 0.6, 0.3)</volume>
      </shadowData>
    </graphicData>

    <statBases>
      <MaxHitPoints>75</MaxHitPoints>
      <WorkToBuild>10000</WorkToBuild>
      <Mass>5</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>30</Beauty>
    </statBases>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>

    <pathCost>30</pathCost>
    <defaultPlacingRot>South</defaultPlacingRot>
    <costStuffCount>30</costStuffCount>
    <costList>
      <Gold>20</Gold>
    </costList>

    <comps>
      <li Class="CompProperties_Facility">
        <statOffsets>
          <Comfort>0.1</Comfort>
        </statOffsets>
        <maxSimultaneous>1</maxSimultaneous>
        <mustBePlacedAdjacentCardinalToBedHead>true</mustBePlacedAdjacentCardinalToBedHead>
      </li>
    </comps>

    <staticSunShadowHeight>0</staticSunShadowHeight>
    <castEdgeShadows>false</castEdgeShadows>
    <researchPrerequisites>
      <li>DankPyon_RoyalRusticFurniture</li>
    </researchPrerequisites>
    <designationCategory>DankPyon_RusticFurniture</designationCategory>
  </ThingDef>

<!-- Royal Dresser -->
  <ThingDef ParentName="DankPyon_ArtableFurnitureBase">
    <defName>DankPyon_RoyalDresser</defName>
    <label>royal dresser</label>
    <description>An elegant dresser framed with gold. Gives a comfort bonus to all nearby beds. Placing more than one dresser near the same bed has no effect.</description>
    <graphicData>
      <texPath>Furniture/RoyalDresser</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(2,1)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.4</fillPercent>
    <castEdgeShadows>true</castEdgeShadows>
    <pathCost>42</pathCost>

    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <defaultPlacingRot>South</defaultPlacingRot>
    <costStuffCount>50</costStuffCount>
    <costList>
      <Gold>40</Gold>
    </costList>


    <statBases>
      <MaxHitPoints>130</MaxHitPoints>
      <Mass>25</Mass>
      <WorkToBuild>24000</WorkToBuild>
      <Flammability>1.0</Flammability>
      <Beauty>5</Beauty>
    </statBases>

    <size>(2,1)</size>
    <designationHotKey>Misc12</designationHotKey>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <surfaceType>Item</surfaceType>
    <canOverlapZones>false</canOverlapZones>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>

    <comps>
      <li Class="CompProperties_Facility">
        <statOffsets>
          <Comfort>0.10</Comfort>
        </statOffsets>
        <maxSimultaneous>1</maxSimultaneous>
        <maxDistance>6</maxDistance>
      </li>
    </comps>
    <researchPrerequisites>
      <li>DankPyon_RoyalRusticFurniture</li>
    </researchPrerequisites>
    <designationCategory>DankPyon_RusticFurniture</designationCategory>
  </ThingDef>

<!-- Royal Tudor Bed -->
  <ThingDef ParentName="DankPyon_ArtableBedBase">
    <defName>DankPyon_RoyalTudorBed</defName>
    <label>royal tudor bed</label>
    <description>A luxurious gold-inlaid bed fit for the highborn. Very comfy and beautiful, it is a work of art in itself. Fits two.</description>
    <graphicData>
      <texPath>Furniture/RoyalTudorBed</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(4.05,4.05)</drawSize>
      <damageData>
        <rect>(0,0.05,2,1.95)</rect>
      </damageData>
    </graphicData>

    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>DankPyon_RoyalEndTable</li>
          <li>DankPyon_RoyalDresser</li>
          <li>DankPyon_RoyalCloset</li>
        </linkableFacilities>
      </li>
    </comps>

    <statBases>
      <MaxHitPoints>220</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <WorkToBuild>60000</WorkToBuild>
      <Mass>85</Mass>
      <Beauty>100</Beauty>
      <BedRestEffectiveness>1.15</BedRestEffectiveness>
      <Comfort>0.95</Comfort>
      <ImmunityGainSpeedFactor>1.07</ImmunityGainSpeedFactor>
      <SurgerySuccessChanceFactor>1</SurgerySuccessChanceFactor>
    </statBases>

    <size>(2,2)</size>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>120</costStuffCount>
    <costList>
      <Gold>70</Gold>
    </costList>

    <building>
      <bed_showSleeperBody>False</bed_showSleeperBody>
      <bed_healPerDay></bed_healPerDay>
    </building>

    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <fillPercent>0.5</fillPercent>
    <pathCost>42</pathCost>
    <leaveResourcesWhenKilled>True</leaveResourcesWhenKilled>
    <staticSunShadowHeight>0.17</staticSunShadowHeight>
    <castEdgeShadows>True</castEdgeShadows>
    <designationHotKey>Misc4</designationHotKey>
    <techLevel>Medieval</techLevel>
    <constructionSkillPrerequisite>9</constructionSkillPrerequisite>
    <uiIconScale>0.75</uiIconScale>

    <researchPrerequisites>
      <li>DankPyon_RoyalRusticFurniture</li>
    </researchPrerequisites>
	<designationCategory>DankPyon_RusticFurniture</designationCategory>
  </ThingDef>
  
  
</Defs>
