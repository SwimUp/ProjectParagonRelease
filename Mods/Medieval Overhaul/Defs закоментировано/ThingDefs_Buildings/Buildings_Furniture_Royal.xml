<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!--======================= Royal Furniture ==============================-->

  <ThingDef ParentName="DankPyon_FurnitureWithQualityBase">
    <defName>DankPyon_RoyalCloset</defName>
    <label>royal closet</label>
    <description>A closet to store clothes efficiently and beautifully. Place near beds for a slight comfort bonus</description>
    <graphicData>
      <texPath>Furniture/RoyalCloset</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>3</drawSize>
    </graphicData>
  
    <thingClass>Building</thingClass>
    <uiIconScale>0.65</uiIconScale>
    <uiIconOffset>(0, 0.15)</uiIconOffset>
    <size>(1,1)</size>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.6</fillPercent>
    <minifiedDef>MinifiedThing</minifiedDef>
    <canOverlapZones>false</canOverlapZones>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
  
    <statBases>
      <MaxHitPoints>140</MaxHitPoints>
      <WorkToBuild>14500</WorkToBuild>
      <Mass>45</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>30</Beauty>
    </statBases>
  
    <stuffCategories>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>
    <costList>
      <Gold>30</Gold>
    </costList>
    
    <comps>
      <li Class="CompProperties_Facility">
        <statOffsets>
          <Comfort>0.1</Comfort>
        </statOffsets>
        <maxDistance>5</maxDistance>
        <maxSimultaneous>1</maxSimultaneous>
      </li>
    </comps>

    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <designationCategory>DankPyon_RusticFurniture</designationCategory>
  </ThingDef>

<!--Bookshelf -->
