<Defs>

  <!-- ==================== Storage Base ==================== -->

  <ThingDef Name="DankPyon_StorageBase" ParentName="LWM_DeepStorage" Abstract="True">
    <building>
      <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
      <ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
      <defaultStorageSettings>
        <priority>Important</priority>
        <filter>
        </filter>
      </defaultStorageSettings>
    </building>
    <researchPrerequisites Inherit="false">
      <li>DankPyon_RusticStorage</li>
    </researchPrerequisites>
  </ThingDef>

  <!-- ==================== Wood Logs ==================== -->
  <ThingDef ParentName="DankPyon_StorageBase">
		<defName>DankPyon_WoodLogs1x1c</defName>
		<label>wood logs</label>
		<description>Logs that are stacked in an efficient manner to save more space.</description>
		<graphicData>
			<texPath>Storage/WoodLogs1x1</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(2,2)</drawSize>
		</graphicData>
    <uiIconPath>Storage/WoodLogs1x1_south</uiIconPath>
    <uiIconScale>1</uiIconScale>
		<castEdgeShadows>true</castEdgeShadows>
    <size>(1,1)</size>

		<statBases>
			<MaxHitPoints>70</MaxHitPoints>
      <WorkToBuild>100</WorkToBuild>
      <Mass>5</Mass>
      <Flammability>1</Flammability>
		</statBases>
    <designatorDropdown>DankPyon_WoodLogs1x1a</designatorDropdown>
    
		<costList>
			<WoodLog>45</WoodLog>
		</costList>

    <building>
      <fixedStorageSettings>
        <filter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </filter>
      </fixedStorageSettings>
    </building>

    <comps>
      <li Class="LWM.DeepStorage.Properties" >
        <minNumberStacks>1</minNumberStacks>
        <maxNumberStacks>6</maxNumberStacks>
        <timeStoringTakes>120</timeStoringTakes>
        <showContents>false</showContents>
		    <overlayType>None</overlayType>
      </li>
    </comps>
    <researchPrerequisites Inherit="false">
    </researchPrerequisites>
	</ThingDef>

