  <ThingDef ParentName="DankPyon_FurnitureWithQualityBaseRug">
		<defName>DankPyon_RugPatched1x1c</defName>
		<label>patched rug (1x1)</label>
		<description>A roughly stiched rug made up of seperate leathers.</description>
		<thingClass>Building</thingClass>
		<graphicData>
			<texPath>Furniture/RugPatched1x1</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1,1)</drawSize>
		</graphicData>
    	<building>
      		<isEdifice>false</isEdifice>
    	</building>
		<rotatable>true</rotatable>
		<altitudeLayer>FloorEmplacement</altitudeLayer>
    
		<statBases>
			<WorkToMake>3000</WorkToMake>
			<Beauty>3</Beauty>
			<Mass>9</Mass>
		</statBases>
    
		<stuffCategories>
      		<li>Leathery</li>
