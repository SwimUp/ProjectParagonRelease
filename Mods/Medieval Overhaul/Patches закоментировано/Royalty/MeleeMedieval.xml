<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Ludeon.RimWorld.Royalty</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Normal</success>
      <operations>

        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="MeleeWeapon_Axe"]/recipeMaker</xpath>
          <value>
            <recipeMaker>
              <researchPrerequisite>DankPyon_BasicAxes</researchPrerequisite>
              <skillRequirements>
                <Crafting>5</Crafting>
              </skillRequirements>
            </recipeMaker>
          </value>
        </li>

        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="MeleeWeapon_Warhammer"]/recipeMaker</xpath>
          <value>
            <recipeMaker>
              <researchPrerequisite>DankPyon_MilitaryHammers</researchPrerequisite>
              <skillRequirements>
                <Crafting>5</Crafting>
              </skillRequirements>
            </recipeMaker>
          </value>
        </li>

      </operations>
    </match>
  </Operation>
</Patch>
