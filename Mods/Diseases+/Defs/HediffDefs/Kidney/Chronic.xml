<?xml version="1.0" encoding="utf-8"?>
<Defs>
	
	<HediffDef ParentName="ChronicDiseaseBase">
		<defName>Diseases_HediffDef_KidneyFailure</defName>
		<label>Kidney failure</label>
		<description>Complete impairment of kidney function.</description>
		<initialSeverity>1.0</initialSeverity>
		<minSeverity>0.001</minSeverity>
		<maxSeverity>1.0</maxSeverity>
		<tendable>false</tendable>
		<makesSickThought>true</makesSickThought>
		<stages>
			<li>
				<painOffset>0.1</painOffset>
				<partEfficiencyOffset>-1.0</partEfficiencyOffset>
			</li>
		</stages>
	</HediffDef>
	
	<HediffDef ParentName="ChronicDiseaseBase">
		<defName>Diseases_HediffDef_ChronicKidneyDisease</defName>
		<label>Chronic kidney disease</label>
		<minSeverity>0.001</minSeverity>
		<initialSeverity>1.0</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<makesSickThought>true</makesSickThought>
		<description>A chronic disease of the excretory system that gradually destroys the kidneys.</description>
		<stages>
			<li>
				<partEfficiencyOffset>-0.5</partEfficiencyOffset>
				<painOffset>0.05</painOffset>
			</li>
		</stages>
	</HediffDef>
	
</Defs>