			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>0.015</severityPerDayNotImmune>
			</li>
			<li Class="HediffCompProperties_TendDuration">
				<baseTendDurationHours>72</baseTendDurationHours>
				<severityPerDayTended>-0.01</severityPerDayTended>
			</li>
			<li Class="HediffCompProperties_SkillDecay">
				<decayPerDayPercentageLevelCurve>
					<points>
						<li>(4, 0.1)</li>
						<li>(12, 0.25)</li>
						<li>(20, 0.35)</li>
					</points>
				</decayPerDayPercentageLevelCurve>
			</li>
		</comps>
		<stages>
			<li>
				<label>detachment</label>
				<partEfficiencyOffset>-0.1</partEfficiencyOffset>
				<mentalStateGivers>
					<li>
						<mentalState>Wander_Sad</mentalState>
						<mtbDays>20</mtbDays>
					</li>
				</mentalStateGivers>
				<statOffsets>
					<PsychicSensitivity>-0.15</PsychicSensitivity>
					<GlobalLearningFactor>-0.15</GlobalLearningFactor>
					<WorkSpeedGlobal>-0.15</WorkSpeedGlobal>
				</statOffsets>
			</li>
			<li>
				<label>thinking disorder</label>
