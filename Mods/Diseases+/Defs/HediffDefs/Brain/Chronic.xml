		<initialSeverity>0.001</initialSeverity>
		<minSeverity>0.001</minSeverity>
		<maxSeverity>1.0</maxSeverity>
		<tendable>true</tendable>
		<makesSickThought>true</makesSickThought>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<severityPerDayNotImmune>0.25</severityPerDayNotImmune>
			</li>
			<li Class="HediffCompProperties_TendDuration">
				<baseTendDurationHours>72</baseTendDurationHours>
				<severityPerDayTended>-0.5</severityPerDayTended>
			</li>
			<li Class="HediffCompProperties_SkillDecay">
				<decayPerDayPercentageLevelCurve>
					<points>
						<li>(4, 0.1)</li>
						<li>(12, 0.25)</li>
						<li>(20, 0.35)</li>
					</points>
				</decayPerDayPercentageLevelCurve>
			</li>
			<li Class="Diseases.Hediffs.HediffCompProperties_Storage">
				<comps>
					<li>
						<compClass>Diseases.Hediffs.HediffComp_DiseaseAfterTicks</compClass>
						<intervalTicks>420000~620000</intervalTicks>
						<hediffDefs>
							<li>Diseases_HediffDef_Inspiration</li>
							<li>Diseases_HediffDef_Alienation</li>
						</hediffDefs>
						<partsToAffect>
							<li>Brain</li>
							<li>BrainWithoutBlood</li>
						</partsToAffect>
						<chance>0.75</chance>
						<letter>false</letter>
					</li>
					<li>
						<compClass>Diseases.Hediffs.HediffComp_DiseaseAfterTicks</compClass>
						<intervalTicks>900000~1080000</intervalTicks>
						<hediffDefs>
							<li>Diseases_HediffDef_PsychosisOfHypersensitivity</li>
							<li>Diseases_HediffDef_Depression</li>
						</hediffDefs>
						<partsToAffect>
							<li>Brain</li>
							<li>BrainWithoutBlood</li>
						</partsToAffect>
						<chance>1.0</chance>
						<letter>true</letter>
					</li>
					<li>
						<compClass>Diseases.Hediffs.HediffComp_DiseaseAfterTicks</compClass>
						<intervalTicks>180000~220000</intervalTicks>
						<hediffDefs>
							<li>Diseases_HediffDef_Hallucinosis</li>
						</hediffDefs>
						<partsToAffect>
							<li>Brain</li>
							<li>BrainWithoutBlood</li>
						</partsToAffect>
						<chance>1.0</chance>
						<severityRange>0.15~1.0</severityRange>
						<letter>false</letter>
					</li>
				</comps>
			</li>
		</comps>
		<stages>
			<li>
				<label>calmness</label>
				<partEfficiencyOffset>-0.15</partEfficiencyOffset>
				<socialFightChanceFactor>0.8</socialFightChanceFactor>
				<mentalStateGivers>
					<li>
						<mentalState>Wander_OwnRoom</mentalState>
						<mtbDays>20</mtbDays>
					</li>
				</mentalStateGivers>
			</li>
			<li>
				<label>anxiety</label>
				<minSeverity>0.4</minSeverity>
				<partEfficiencyOffset>-0.3</partEfficiencyOffset>
				<socialFightChanceFactor>1.5</socialFightChanceFactor>
				<mentalStateGivers>
					<li>
						<mentalState>BedroomTantrum</mentalState>
						<mtbDays>10</mtbDays>
					</li>
				</mentalStateGivers>
			</li>
			<li>
				<label>hallucinations</label>
				<minSeverity>0.75</minSeverity>
				<socialFightChanceFactor>3</socialFightChanceFactor>
				<partEfficiencyOffset>-0.5</partEfficiencyOffset>
				<mentalStateGivers>
					<li>
						<mentalState>MurderousRage</mentalState>
						<mtbDays>3</mtbDays>
					</li>
				</mentalStateGivers>
			</li>
		</stages>
	</HediffDef>

