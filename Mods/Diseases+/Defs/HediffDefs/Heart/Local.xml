<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef ParentName="InfectionBase">
		<defName>Diseases_HediffDef_CardiacAsthma</defName>
		<label>Cardiac asthma</label>
		<description>Disruption of the heart caused by a heart defect. It manifests itself in difficulty breathing.</description>
		<initialSeverity>1.0</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<tendable>false</tendable>
		<makesSickThought>true</makesSickThought>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>50000~70000</disappearsAfterTicks>
				<showRemainingTime>false</showRemainingTime>
			</li>
		</comps>
		<stages>
			<li>
				<painOffset>0.1</painOffset>
				<capMods>
					<li>
						<capacity>Breathing</capacity>
						<offset>-0.5</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
	
</Defs>