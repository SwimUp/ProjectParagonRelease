<Defs>
	<!-- Hangman Helmet  -->
	<ThingDef ParentName="ApparelBase">
		<defName>THMA_Helmet</defName>
		<label>Basic Helmet</label>
		<description>A helmet used by soldiers of The Hangmen</description>
		<graphicData>
			<texPath>Things/Armor/Display/helmet</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.5</drawSize>
		</graphicData>
		<techLevel>Industrial</techLevel>
		<generateCommonality>0</generateCommonality>
		<generateAllowChance>0</generateAllowChance>
		<costList>
			<Kevlar>15</Kevlar>
			<Synthread>15</Synthread>
			<Steel>60</Steel>
		</costList>
		<statBases>
			<MarketValue>300</MarketValue>
			<WorkToMake>15000</WorkToMake>
			<MaxHitPoints>120</MaxHitPoints>
			<ArmorRating_Sharp>8</ArmorRating_Sharp>
			<ArmorRating_Blunt>10</ArmorRating_Blunt>
			<ArmorRating_Heat>0.4</ArmorRating_Heat>
			<Mass>5</Mass>
			<Bulk>5</Bulk>
			<WornBulk>1.5</WornBulk>
			<EquipDelay>1.5</EquipDelay>
			<Insulation_Cold>1</Insulation_Cold>
			<Insulation_Heat>2</Insulation_Heat>
		</statBases>
		<equippedStatOffsets>
			<AimingAccuracy>-0.01</AimingAccuracy>
			<Suppressability>-0.15</Suppressability>
		</equippedStatOffsets>
		<thingCategories Inherit="False">
			<li>ArmorHeadgear</li>
		</thingCategories>
		<apparel>
			<wornGraphicPath>Things/Armor/Headgear/helmet</wornGraphicPath>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<layers>
				<li>Overhead</li>
				<li>StrappedHead</li>
			</layers>
			<canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
		</apparel>
		<tradeTags>
			<li>Armor</li>
		</tradeTags>
		<thingSetMakerTags>
			<li>RewardStandardMidFreq</li>
		</thingSetMakerTags>
	</ThingDef>
