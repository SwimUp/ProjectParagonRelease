<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!--Single ModernBed-->
	<ThingDef ParentName="ParagonFurnitureBase">
		<defName>SC_ModernBed</defName>
		<label>modern bed (wood frame)</label>
		<description>A wooden frame bed with cozy mattress and pillows, and sheets. The modern bed is both simple and luxurious, and would be acceptable to highborn.</description>
		<graphicData>
			<texPath>Things/Building/Furniture/SC_ModernBed/ModernBedSingle</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(2,2)</drawSize>
			<damageData>
				<rect>(0,0.05,1,1.95)</rect>
			</damageData>
		</graphicData>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Beauty>8</Beauty>
			<WorkToBuild>2500</WorkToBuild>
			<Mass>20</Mass>
			<BedRestEffectiveness>1.08</BedRestEffectiveness>
			<Comfort>1.5</Comfort>
			<ImmunityGainSpeedFactor>1.1</ImmunityGainSpeedFactor>
			<SurgerySuccessChanceFactor>1.05</SurgerySuccessChanceFactor>
		</statBases>
		<stuffCategories>
			<li>Fabric</li>
		</stuffCategories>
		<costStuffCount>100</costStuffCount>
		<costList>
			<WoodPlanks>100</WoodPlanks>
			<ComponentIndustrial>4</ComponentIndustrial>
			<MechanismComplex>2</MechanismComplex>
		</costList>
		<size>(1,2)</size>
		<building>
			<bed_showSleeperBody>False</bed_showSleeperBody>
			<bed_healPerDay>4</bed_healPerDay>
			<paintable>true</paintable>
		</building>
		<fillPercent>0.4</fillPercent>
		<pathCost>60</pathCost>
		<staticSunShadowHeight>0.17</staticSunShadowHeight>
		<castEdgeShadows>True</castEdgeShadows>
		<techLevel>Industrial</techLevel>
		<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
		<researchPrerequisites>
			<li>ComplexFurnitureII</li>
		</researchPrerequisites>
		<uiIconScale>0.90</uiIconScale>
		<designatorDropdown>SingleBeds</designatorDropdown>
	</ThingDef>
