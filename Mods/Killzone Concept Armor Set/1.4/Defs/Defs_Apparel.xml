			<WornBulk>1</WornBulk>
			<NightVisionEfficiency_Apparel>0.50</NightVisionEfficiency_Apparel>
			<MarketValue>620</MarketValue>
		</statBases>
		<tradeTags>
			<li>Armor</li>
		</tradeTags>
		<costList>
			<Kevlar>30</Kevlar>
			<Synthread>45</Synthread>
			<TitaniumIngot>80</TitaniumIngot>
		</costList>
		<equippedStatOffsets>
			<ToxicEnvironmentResistance>0.75</ToxicEnvironmentResistance>
			<ShootingAccuracyPawn>0.50</ShootingAccuracyPawn>
			<SmokeSensitivity>-1</SmokeSensitivity>
			<Suppressability>-0.6</Suppressability>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>FullHead</li>
				<li>Eyes</li>
				<li>Teeth</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/Bot_Soldier_Helmet</wornGraphicPath>
