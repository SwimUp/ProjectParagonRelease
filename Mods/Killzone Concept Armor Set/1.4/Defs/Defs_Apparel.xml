<Defs>
	<!-- Heavy Helmet -->
	<ThingDef ParentName="ApparelBase">
		<defName>Bot_Soldier_Helmet</defName>
		<label>Heavy Trooper Helmet</label>
		<description>"The Heavy Trooper is a soldier pumped up with propaganda and psychotropic drugs, sealed in a suit of bulletproof and blast-resistant armor."</description>
		<techLevel>Industrial</techLevel>
		<tradeability>All</tradeability>
		<generateCommonality>0</generateCommonality>
		<generateAllowChance>0</generateAllowChance>
		<graphicData>
			<texPath>Things/Apparel/Bot_Soldier_Helmet_UI</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<WorkToMake>7000</WorkToMake>
			<MaxHitPoints>150</MaxHitPoints>
			<Mass>3</Mass>
			<ArmorRating_Sharp>8</ArmorRating_Sharp>
			<ArmorRating_Blunt>18</ArmorRating_Blunt>
			<ArmorRating_Heat>5</ArmorRating_Heat>
			<Insulation_Cold>10</Insulation_Cold>
			<Insulation_Heat>25</Insulation_Heat>
			<EquipDelay>1.2</EquipDelay>
