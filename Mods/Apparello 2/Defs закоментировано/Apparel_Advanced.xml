<?xml version="1.0" encoding="utf-8" ?>
<Defs>






<!-- ===============ONSKIN============== -->


	<!--Jumpsuit-->

  <ThingDef ParentName="ApparelloVanillaBase">
    <defName>Apparello_GSkin</defName>
    <label>jumpsuit</label>
    <description>A basic Jumpsuit. Normally seen worn on Glitterworld light infantry, officials and especially firefighters for it's heat absorbing properties</description>

    <graphicData>
      <texPath>Apparel/Display/Glitterskin</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>

    <recipeMaker>
      <researchPrerequisite>ApparelloResearchSF</researchPrerequisite>
    </recipeMaker>

    <costStuffCount>80</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>

    <thingCategories>
      <li>Torso</li>
    </thingCategories>

    <statBases>
	      <Mass>0.40</Mass>
      <WorkToMake>9000</WorkToMake>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <ArmorRating_Heat>0.17</ArmorRating_Heat>
      <StuffEffectMultiplierInsulation_Cold>0.10</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.50</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>3</EquipDelay>

    </statBases>
		<generateCommonality>0.5</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/Glitterskin/Glitterskin</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>SpacerMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>


	<!--Overall-->


  <ThingDef ParentName="ApparelloVanillaBase">
    <defName>Apparello_XcomOne</defName>
    <label>overalls</label>
    <description>Spaceship engineers all across the galaxy are known to wear these for the resistance they provide against their worst enemy: The electric cables.</description>

    <graphicData>
      <texPath>Apparel/Display/Xcom1</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>

    <recipeMaker>
      <researchPrerequisite>ApparelloResearchWork</researchPrerequisite>
    </recipeMaker>

    <costStuffCount>80</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>

    <thingCategories>
      <li>Torso</li>
      <li>ApparelloConstructionSet</li>
    </thingCategories>

    <statBases>
		      <Mass>0.40</Mass>
      <WorkToMake>9000</WorkToMake>
      <StuffEffectMultiplierArmor>0.4</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.25</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.05</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>

    <equippedStatOffsets>
      <FixBrokenDownBuildingSuccessChance>0.10</FixBrokenDownBuildingSuccessChance>
    </equippedStatOffsets>
		<generateCommonality>0.5</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/Xcoveralls/Xcom1</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>Spacer</li>
	<li>CR_Pocket</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>




<!-- Xcom Overalls -->

  <ThingDef ParentName="ApparelloBase">
    <defName>Apparello_Standissue</defName>
    <label>standard issue overalls</label>
    <description>Standard military issue air force overalls. Very common amongst orbital drop squads</description>
    <tradeability>Sellable</tradeability>
    <graphicData>
      <texPath>Apparel/Display/Xcom2</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>

    <thingCategories>
      <li>Torso</li>
    </thingCategories>

    <statBases>
		      <Mass>1</Mass>
      <MarketValue>300</MarketValue>
      <MaxHitPoints>210</MaxHitPoints>
      <Flammability>0.2</Flammability>
      <DeteriorationRate>0.04</DeteriorationRate>
      <ArmorRating_Blunt>0.03</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.03</ArmorRating_Sharp>
      <ArmorRating_Heat>0.10</ArmorRating_Heat>
      <StuffEffectMultiplierInsulation_Cold>0.25</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.05</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <WorkSpeedGlobal>0.01</WorkSpeedGlobal>
      <FixBrokenDownBuildingSuccessChance>0.01</FixBrokenDownBuildingSuccessChance>
    </equippedStatOffsets>
			<generateCommonality>0.005</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/Xcoveralls/Rare/Xcom1</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>SpacerMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(1,1,1,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>


  
  
  
  
  
  
