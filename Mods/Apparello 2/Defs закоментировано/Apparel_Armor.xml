<!-- VESTS -->




	<!--Sheet-->

  <ThingDef ParentName="ApparelloVanillaBase">
    <defName>Apparello_Sheet</defName>
    <label>padded vest</label>
    <description>Crude Leather padding for added protection against blunt damage.</description>

    <graphicData>
      <texPath>Apparel/Display/Sheet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>

    <recipeMaker>
      <researchPrerequisite>ApparelloResearchQuilting</researchPrerequisite>
    </recipeMaker>

    <costStuffCount>55</costStuffCount>
    <stuffCategories>
      <li>Leathery</li>
    </stuffCategories>

    <thingCategories>
      <li>ApparelArmor</li>
      <li>ApparelloWombatSet</li>
    </thingCategories>

    <statBases>
		      <Mass>1.40</Mass>
      <WorkToMake>4000</WorkToMake>
      <ArmorRating_Blunt>0.15</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.08</ArmorRating_Sharp>
    </statBases>
		<generateCommonality>0.7</generateCommonality>
    <apparel>
			<careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/Sheet/lp</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>

      <tags>
        <li>IndustrialBasic</li>
        <li>IndustrialMilitaryBasic</li>
        <li>Norbal</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>

    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>









	<!--Glitter vest-->

  <ThingDef ParentName="ArmorelloMakeableBase">
    <defName>Apparello_Gspot</defName>
    <label>alloy vest</label>
    <description>Standard issue protective vest on the glitterworlds. Made of multiple layers of extremely light but strong alloy.</description>

    <graphicData>
      <texPath>Apparel/Display/Glittermid</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>

    <thingCategories>
      <li>ApparelArmor</li>
      <li>ApparelloWombatSet</li>
    </thingCategories>

	<smeltable>true</smeltable>
	
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>ApparelloResearchLPOW</researchPrerequisite>
    </recipeMaker>
    <costList>
      <Plasteel>50</Plasteel>
    </costList>

    <statBases>
		      <Mass>2</Mass>
      <WorkToMake>9500</WorkToMake>
      <MaxHitPoints>220</MaxHitPoints>
      <MarketValue>750</MarketValue>
      <ArmorRating_Blunt>0.25</ArmorRating_Blunt>
      <ArmorRating_Sharp>1.00</ArmorRating_Sharp>
	  <EquipDelay>1</EquipDelay>

    </statBases>
		<generateCommonality>1</generateCommonality>
    <apparel>
			<careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/Glittermid/Glittermid</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>IndustrialMilitaryBasic</li>
      </tags>
      <defaultOutfitTags>
