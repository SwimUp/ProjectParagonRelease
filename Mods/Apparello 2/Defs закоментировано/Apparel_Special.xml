<?xml version="1.0" encoding="utf-8" ?>
<Defs>



<!-- =====Flip flap ^;;^ Bring me a bat===== -->
 





<!-- Syndicate -->


  <ThingDef ParentName="ApparelloMakeableBase">
    <defName>Apparello_Syndicatetello</defName>
    <thingClass>ShieldBelt</thingClass>
    <label>shielded coat</label>
    <description>A long coat with bullet resistant alloy breastplate, fitted with personal shield. Modern technology full of grit</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
    </recipeMaker>
    <graphicData>
      <texPath>Apparel/Display/Synd</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>

    <statBases>
		      <Mass>6</Mass>
      <WorkToMake>30000</WorkToMake>
      <MaxHitPoints>300</MaxHitPoints>
      <MarketValue>1800</MarketValue>
      <ArmorRating_Blunt>0.10</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.55</ArmorRating_Sharp>
      <Insulation_Cold>10</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
      <EquipDelay>7</EquipDelay>

      <EnergyShieldRechargeRate>0.14</EnergyShieldRechargeRate>
      <EnergyShieldEnergyMax>1.5</EnergyShieldEnergyMax>
      <DeteriorationRate>0.3</DeteriorationRate>
    </statBases>
		

    <equippedStatOffsets>
      <MoveSpeed>-1</MoveSpeed>
      <WorkSpeedGlobal>-0.05</WorkSpeedGlobal>
    </equippedStatOffsets>

    <tickerType>Normal</tickerType>

    <thingCategories>
      <li>ApparelArmor</li>
      <li>ApparelloSetMelodie</li>
    </thingCategories>

	<smeltable>true</smeltable>

    <costList>
      <Steel>80</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
      <Apparel_ShieldBelt>1</Apparel_ShieldBelt>
      <Apparel_Duster>1</Apparel_Duster>
    </costList>
			<generateCommonality>0.3</generateCommonality>
    <apparel>
			<careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
		<li>Waist</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/Syndicate/Synd</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
<!--	<li>Belt</li>-->
      </layers>
      <tags>
        <li>PersonalShield</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(0.65,0.65,0.65,1)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>RGBA(0.3,0.3,0.3,1)</min>
          <max>RGBA(0.5,0.5,0.5,1)</max>
        </li>
        <li>
          <weight>10</weight>
          <only>RGBA(1,1,1,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>





	<!--Joywirer-->

  <ThingDef ParentName="ApparelloMakeableBase">
    <defName>Apparello_Medicade</defName>
    <label>joywirer's brocade</label>
      <description>All the joywire artists wearing these know how to talk to their clients or at the very least, give the impression that they'd know what the heck they are doing.</description>

    <graphicData>
      <texPath>Apparel/Display/Meditux</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>

    <thingCategories>
      <li>Torso</li>
      <li>ApparelloMedicalSet</li>
    </thingCategories>

	<smeltable>true</smeltable>
	
    <costList>
      <Steel>5</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
      <MedicineIndustrial>5</MedicineIndustrial>
      <Apparello_Brocade>1</Apparello_Brocade>
    </costList>

    <statBases>
		      <Mass>1</Mass>
      <WorkToMake>1000</WorkToMake>
      <MaxHitPoints>130</MaxHitPoints>
      <MarketValue>600</MarketValue>
      <StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.22</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>

    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.13</SocialImpact>
      <MedicalTendQuality>0.30</MedicalTendQuality>
    </equippedStatOffsets>
		<generateCommonality>1</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/Meditux/Meditux</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <tags>
        <li>Joywirer</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>20</weight>
					<only>RGBA(1,1,1,1)</only>
				</li>	
			</options>
		</colorGenerator>
  </ThingDef>
















</Defs>