<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <!-- 
        Apocrypha 2033 - Apparel (https://steamcommunity.com/sharedfiles/filedetails/?id=2970206222)

        5 Gasmasks, 2 balaclavas, and a helmet.
        The balaclavas have a hole for the eyes, so they don't count as full face or head coverings.
    -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Apocrypha 2033 - Apparel</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/Def[defName="MouthCoveringThin"]/apparel</xpath>
                    <value>
                        <li>ODZ_METRO2033_1holebalcalva</li>
                        <li>ODZ_METRO2033_2holebalcalva</li>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/Def[defName="FaceCoveringThick"]/apparel</xpath>
                    <value>
                        <li>ODZ_METRO2033_GP5Gasmask</li>
                        <li>ODZ_METRO2033_PBFGasmask</li>
                        <li>ODZ_METRO2033_PMGGasmask</li>
                        <li>ODZ_METRO2033_PMK2Gasmask</li>
                        <li>ODZ_METRO2033_PPM88Gasmask</li>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/Def[defName="HeadCoveringThick"]/apparel</xpath>
                    <value>
                        <li>ODZ_METRO2033_ApocalypseHelmet</li>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

</Patch>
