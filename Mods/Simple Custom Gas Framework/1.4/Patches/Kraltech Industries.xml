<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <!-- 
        Kraltech Industries (https://steamcommunity.com/sharedfiles/filedetails/?id=2968750452)

        Lots of apparel added here, I mainly just went through the texture files looking for things that seemed to cover
        the entirety of the mouth, face, head, or body.
        As such the values within each operation are grouped by their location in the textures folder.
    -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Kraltech Industries</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/Def[defName="MouthCoveringThick"]/apparel</xpath>
                    <value>
                        <!-- gas masks -->
                        <li>HeadGear_NeonBlueGasmask</li>
        
                        <!-- hoods -->
                        <li>HeadGear_RaiderHoodedFaceProtector</li>
                        <li>HeadGear_HoodedFaceProtector</li>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>Defs/Def[defName="FaceCoveringThick"]/apparel</xpath>
                    <value>
                        <!-- gas masks -->
                        <li>HeadGear_MinersGasmask</li>
                        <li>HeadGear_NeonBlueGasmaskAlt</li>
                        <li>HeadGear_ReinforcedInfantryGasmask</li>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>Defs/Def[defName="HeadCoveringThick"]/apparel</xpath>
                    <value>
                        <!-- gas masks -->
                        <li>HeadGear_NeonBlueMaskHelmet</li>
                        <li>HeadGear_NeonRedMaskHelmet</li>
                        <li>HeadGear_NeonYellowMaskHelmet</li>
        
                        <!-- helmets -->
                        <li>HeadGear_AssaultHelmet</li>
                        <li>HeadGear_InfantryHelmet</li>
        
                        <!-- faction apparels / enforcer headgears -->
                        <li>HeadGear_EnforcerHelmet</li>
        
                        <!-- mech armors / warlord hunter helmet -->
                        <li>Headgear_WarlordHunterHelmet</li> <!-- one of the few defs without the 'g' in headgear being capitalized :/ -->
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>Defs/Def[defName="FullBodyCoveringThin"]/apparel</xpath>
                    <value>
                        <!-- combat suit -->
                        <li>Apparel_CombatSkinSuit</li>
        
                        <!-- jump suits -->
                        <li>Apparel_TravelerJumpsuit</li>
                        <li>Apparel_ReinforcedJumpsuit</li>
                        <li>Apparel_UtilityJumpsuit</li>
        
                        <!-- faction apparels / enforcer jumpsuits -->
                        <li>Apparel_EnforcerJumpSuit</li>
        
                        <!-- techwear -->
                        <li>Apparel_CombatweaveJumpsuit</li>
                        <li>Apparel_TechwearBodysuit</li>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>Defs/Def[defName="FullBodyCoveringThick"]/apparel</xpath>
                    <value>
                        <!-- mech armors / dragon slayer mechlord suit -->
                        <li>Apparel_DragonSlayerMechlordSuit</li>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

</Patch>
