<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <!-- 
        Great War - German Uniforms (https://steamcommunity.com/sharedfiles/filedetails/?id=2581651314)

        Mainly just gas masks and helmet variants, values are grouped by variant.
    -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>[1.4] Great War - German Uniforms</li>
        </mods>
        <match Class="PatchOperationAdd">
            <xpath>Defs/Def[defName="FaceCoveringThick"]/apparel</xpath>
            <value>
                <!-- M1916 stahlhelm -->
                <li>ODZ_WWI_M1916StahlhelmGasmask</li>
                <li>ODZ_WWI_M1916StahlhelmCamoGasmask</li>
                <li>ODZ_WWI_M1916StahlhelmPlateGasmask</li>

                <!-- Imperial Feldmutze -->
                <li>ODZ_WWI_ImperialFeldmutzeGasmask</li>

                <!-- M17 -->
                <li>ODZ_WWI_M17Gasmask</li>

                <!-- Officer Feldmutze -->
                <li>ODZ_WWI_ImperialOfficerFeldmutzeGasmask</li>

                <!-- Pickelhaube -->
                <li>ODZ_WWI_PickelhaubeGasmask</li>
                <li>ODZ_WWI_PickelhaubeCoveredGasmask</li>
            </value>
        </match>
    </Operation>

</Patch>
