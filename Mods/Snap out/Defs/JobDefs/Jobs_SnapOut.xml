<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <WorkGiverDef>
    <defName>SnapOut_CalmPawnDownWorkgiver</defName>
    <label>calm down another pawn</label>
    <giverClass>SnapOut.WorkGiver_CalmPawnDown</giverClass>
    <workType>Warden</workType>
    <verb>calm</verb>
    <gerund>calming</gerund>
    <priorityInType>18</priorityInType>
    <requiredCapacities>
      <li>Manipulation</li>
      <li>Talking</li>
    </requiredCapacities>
  </WorkGiverDef>
   
  <JobDef>
    <defName>SnapOut_CalmDownJob</defName>
    <driverClass>SnapOut.JobDriver_CalmDown</driverClass>
    <reportString>calming TargetA down.</reportString>
    <casualInterruptible>true</casualInterruptible>
  </JobDef>
  
  <JobDef>
	<defName>SnapOut_SnappingOutJob</defName>
	<driverClass>SnapOut.JobDriver_SnappingOut</driverClass>
	<reportString>spending time alone.</reportString>
	<casualInterruptible>false</casualInterruptible>
  </JobDef>

  <JobDef>
    <defName>SnapOut_GoToSafetyJob</defName>
    <driverClass>SnapOut.JobDriver_GoToSafety</driverClass>
    <reportString>trying to relax.</reportString>
    <casualInterruptible>true</casualInterruptible>
  </JobDef>

  <JobDef>
    <defName>SnapOut_ActuallyRecoverJob</defName>
    <driverClass>SnapOut.JobDriver_ActuallyRecover</driverClass>
    <reportString>spending time alone.</reportString>
    <casualInterruptible>false</casualInterruptible>
  </JobDef>
  
</Defs>
