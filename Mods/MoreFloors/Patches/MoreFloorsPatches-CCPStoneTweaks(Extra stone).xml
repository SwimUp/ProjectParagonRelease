<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <!-- Floors for new stone types in CCP's Stone Tweaks - these defs are      -->
  <!--  patched during load time to remove the Abstract attribute if the      -->
  <!--  appropriate mod is active, otherwise, they harmlessly disappear into  -->
  <!--  the ether                                                             -->
  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>CCP's Stone Tweaks</li>
    </mods>

    <match Class="PatchOperationAttributeRemove">
      <xpath>/Defs/TerrainDef[defName="FloorStoneSlabsCCPPinkMarble" or
        defName="FloorStoneSlabsCCPBlueGranite" or
        defName="FloorStoneSlabsCCPGreenMarble"]</xpath>
      <attribute>Abstract</attribute>
    </match>
  </Operation>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>CCP's Stone Tweaks</li>
    </mods>

